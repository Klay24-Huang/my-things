@using For_Interview.Models.ViewModels;
@{
    ViewData["Title"] = "Home Page";
}

@model LoginViewModel

<div class="text-center">
  <h1 class="display-4">Login</h1>
  <form method="post" action="/Home/Login">
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="Account">Account</label>
    <div class="col-sm-10">
      <input class="form-control" asp-for="Account">
    </div>
    <span asp-validation-for="Account" class="text-danger"></span>
  </div>
  <div class="form-group row mt-2">
    <label class="col-sm-2 col-form-label" asp-for="Password">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" asp-for="Password">
    </div>
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>
        @{
            var loginResult = TempData["LoginResult"]?.ToString();
            if (loginResult != null)
            {
                <h1 class="mt-2 text-danger">
                    @loginResult
                </h1>
            }
        }
  <button type="submit" class="btn btn-primary mt-2">登入</button>
  <a class="nav-link text-dark mt-2" asp-area="" asp-controller="Register" asp-action="Index">註冊</a>
</form>
</div>
