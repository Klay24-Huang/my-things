@using For_Interview.Models.ViewModels;
@model RegisterViewModel

@{
    ViewData["Title"] = "註冊";
}

<form method="post" enctype="multipart/form-data" asp-controller="Register" asp-action="CreateUser">
  <div class="form-group row">
    <label asp-for="Name">姓名</label>
    <input type="text" class="form-control" asp-for="Name"/>
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>

  <div class="form-group row mt-2">
    <label asp-for="Account">帳號</label>
    <input type="text" class="form-control" asp-for="Account"/>
    <span asp-validation-for="Account" class="text-danger"></span>
  </div>

  <div class="form-group row mt-2">
    <label asp-for="Password">密碼</label>
    <input type="password" class="form-control" asp-for="Password"/>
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>

  <div class="form-group row mt-2">
    <label asp-for="ConfirmPassword">確認密碼</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword"/>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
  </div>

  <div class="form-group row mt-2">
    <label asp-for="Email">Email</label>
    <input type="email" class="form-control" asp-for="Email"/>
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>

  <div class="form-group row mt-2">
    <label asp-for="Birthday">生日</label>
    <input type="datetime" class="form-control" asp-for="Birthday" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
    <span asp-validation-for="Birthday" class="text-danger"></span>
  </div>

  <div class="form-group row mt-2">
    <label asp-for="Organizatoin">組織</label>
    <input type="text" class="form-control" asp-for="Organizatoin"/>
    <span asp-validation-for="Organizatoin" class="text-danger"></span>
  </div>

 <div class="form-group row mt-2">
    <label asp-for="File">附檔</label>
    <input type="file" asp-for="File"/>
    <span asp-validation-for="File" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary mt-2">註冊</button>

  <h1 class="mt-2 text-danger">@TempData["RegisterResult"]</h1>
</form>

