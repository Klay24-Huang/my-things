@using For_Interview.Models.ViewModels;
@model RegisterViewModel

<form method="post" enctype="multipart/form-data" actoin="/Register/CreateUser">
  <div class="form-group">
    <label asp-for="Account">Account</label>
    <input type="text" class="form-control" asp-for="Account"/>
  </div>

  <div class="form-group">
    <label asp-for="Password"></label>
    <input type="password" class="form-control" asp-for="Password"/>
  </div>

  <div class="form-group">
    <label asp-for="ConfirmPassword"></label>
    <input type="password" class="form-control" asp-for="ConfirmPassword"/>
  </div>

  <div class="form-group">
    <label asp-for="Name"></label>
    <input type="text" class="form-control" asp-for="Name"/>
  </div>

  <div class="form-group">
    <label asp-for="Email">Email</label>
    <input type="email" class="form-control" asp-for="Email"/>
  </div>

  <div class="form-group">
    <label asp-for="Birthday"></label>
    <input type="datetime-local" class="form-control" asp-for="Birthday"/>
  </div>

  <div class="form-group">
    <label asp-for="Organizatoin"></label>
    <input type="text" class="form-control" asp-for="Organizatoin"/>
  </div>

 <div class="form-group">
    <label asp-for="File">附檔</label>
    <input type="file" asp-for="File"/>
  </div>

  <button type="submit" class="btn btn-primary">註冊</button>

  <div class="mt-2">
        @{
            var registerResult = TempData["RegisterResult"].ToString()
          if (registerResult.Length > 0)
            {
                $"{registerResult}"
            }
        }
  </div>
</form>

