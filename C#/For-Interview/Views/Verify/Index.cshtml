@using For_Interview.Models.ViewModels;
@model VerifyViewModel;


<div>
@*搜尋區塊*@
<form>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="SearchConditoin.Account">帳號</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="SearchConditoin.Account">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="SearchConditoin.Name">姓名</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="SearchConditoin.Name">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="SearchConditoin.Email">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="SearchConditoin.Email">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="SearchConditoin.Organizatoin">組織</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="SearchConditoin.Organizatoin">
    </div>
  </div>
  <button type="submit" class="btn btn-primary mt-2">搜尋</button>
</form>

  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th scope="col">流水號</th>
        <th scope="col">帳號</th>
        <th scope="col">姓名</th>
        <th scope="col">組織</th>
        <th scope="col">Email</th>
        <th scope="col">生日</th>
        <th scope="col">附檔</th>
        <th scope="col">啟用</th>
      </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SearchResult)
        {
          <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Account</td>
            <td>@item.Name</td>
            <td>@item.Organizatoin</td>
            <td>@item.Email</td>
            <td>@item.Birthday</td>
            <td>    @Html.ActionLink(
                "下載",
                "Download",
                "Verify",
                new { userId = item.Id },
                new { @class = $"btn btn-info"})
            </td>
            <td>
                @Html.ActionLink(
                "認可",
                "SendEmail",
                "Verify",
                new { userId = item.Id },
                new { @class = "btn btn-info", @disabled = $"{!item.Status}"})
            </td>
           </tr>  
        }
    </tbody>
  </table>
   @Html.ActionLink(
                "匯出",
                "ExportExcel",
                "Verify",
                new { @class = "btn btn-info"})


@*分頁              *@
  <nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" aria-label="Previous" onclick="location.href='@Url.Action("Search", "Verify", new {PageIndex = Model.CurrentPage-1})'>
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
      @for (var i = Model.CurrentPage; i <= Model.TotalPage; i++)
      {
         <li class="page-item"><a class="page-link @(i == Model.CurrentPage? "active" : "")" onclick="location.href='@Url.Action("Search", "Verify", new {PageIndex = i})'">@i</a></li>
         @if (i == Model.CurrentPage + 5) break;
      }
    <li class="page-item">
      <a class="page-link" aria-label="Next" onclick="location.href='@Url.Action("Search", "Verify", new {PageIndex = Model.CurrentPage-1})'">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
</div>