@using For_Interview.Models.ViewModels;
@model VerifyViewModel;

@{
    ViewData["Title"] = "審核";
}

<div>
@*搜尋區塊*@
<h1>搜尋</h1>
<form method="post" enctype="multipart/form-data" asp-controller="Verify" asp-action="Search">
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="SearchConditoin.Account">帳號</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="SearchConditoin.Account">
    </div>
  </div>
  <div class="form-group row mt-2">
    <label class="col-sm-2 col-form-label" asp-for="SearchConditoin.Name">姓名</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="SearchConditoin.Name">
    </div>
  </div>
  <div class="form-group row mt-2">
    <label class="col-sm-2 col-form-label" asp-for="SearchConditoin.Email">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="SearchConditoin.Email">
    </div>
  </div>
  <div class="form-group row mt-2">
    <label class="col-sm-2 col-form-label" asp-for="SearchConditoin.Organizatoin">組織</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" asp-for="SearchConditoin.Organizatoin">
    </div>
  </div>
  <button type="submit" class="btn btn-primary mt-2">搜尋</button>
  @Html.Raw(Model.SearchResult)
  @Html.HiddenFor(x => x.SearchResult)
</form>

<form method="post" enctype="multipart/form-data" asp-controller="Verify" asp-action="ExportExcel">
  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th scope="col">流水號</th>
        <th scope="col">帳號</th>
        <th scope="col">姓名</th>
        <th scope="col">組織</th>
        <th scope="col">Email</th>
        <th scope="col">生日</th>
        <th scope="col">附檔</th>
        <th scope="col">啟用</th>
      </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SearchResult)
        {
          <tr>            
            <th scope="row">@item.Id</th>
            <td >@item.Account</td>
            <td>@item.Name</td>
            <td>@item.Organizatoin</td>
            <td>@item.Email</td>
            <td>@item.Birthday</td>
            <td>    @Html.ActionLink(
                "下載",
                "Download",
                "Verify",
                new { userId = item.Id },
                new { @class = $"btn btn-primary"})
            </td>
            <td>
                @{

                var disabled = item.Status ? "disabled" : string.Empty;
                var str = item.Status ? "已啟用" : "啟用";

                @Html.ActionLink(
                $"{str}",
                "SendEmail",
                "Verify",
                new { userId = item.Id },
                new { @class = $"btn btn-primary {disabled}"})
                }
            </td>
           </tr>  
        }
    </tbody>
  </table>
  <button type="submit" class="btn btn-primary mt-2">匯出</button>
   @*@Html.ActionLink(
                "匯出",
                "ExportExcel",
                "Verify",
                new { data = Model.SearchResult},
                new { @class = "btn btn-info"})*@
</form>

@*分頁              *@
  <nav aria-label="Page navigation">
  <ul class="pagination mt-2">
    <li class="page-item">
      <a class="page-link" aria-label="Previous" onclick="location.href='@Url.Action("Page", "Verify", new {PageIndex = Model.CurrentPage-1 == 0 ? 1 : Model.CurrentPage-1 })'>
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
      @for (var i = Model.CurrentPage; i <= Model.TotalPage; i++)
      {
         <li class="page-item"><a class="page-link @(i == Model.CurrentPage? "active" : "")" onclick="location.href='@Url.Action("Page", "Verify", new {PageIndex = i})'">@i</a></li>
         @if (i == Model.CurrentPage + 5) break;
      }
    <li class="page-item">
      <a class="page-link" aria-label="Next" onclick="location.href='@Url.Action("Page", "Verify", new {PageIndex = Model.CurrentPage+1 >= Model.TotalPage ? Model.TotalPage: Model.CurrentPage+1 })'">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
</div>