<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
	<!--[變數] 文字樣板 -->
	<variable name="Layout" value="${longdate} | ${level:uppercase=true} | ${logger} |  ${message} ${newline}"/>
	<variable name="LayoutFatal" value="${longdate} | ${level:uppercase=true} | ${logger} |  ${message} | ${exception:format=tostring} ${newline}"/>
	<!--[變數] 檔案位置 -->
	<variable name="LogTxtDir" value="${basedir}/App_Data/Logs/${shortdate}/"/>
	<variable name="LogTxtLocation" value="${LogTxtDir}/${logger}.log"/>
	<variable name="LogTxtLocationError" value="${LogTxtDir}/${logger}_Error.log"/>
	<!--[設定] 寫入目標-->
	<targets>
		<target name="file" xsi:type="File"
                fileName="${basedir}/App_Data/Logs/${shortdate}/LogFile.txt"
                layout="${longdate} | ${level:uppercase=true} | ${logger} | ${message} ${newline}" />

		<target name="FatalFile" xsi:type="File"
            fileName="${basedir}/App_Data/Logs/${shortdate}/FatalFile.txt"
            layout="${longdate} | ${level:uppercase=true} | ${logger} | ${message} ${newline}" />

		<target name="eventlog" xsi:type="EventLog"
            source="Lab_Of_NLog" log="Application"
            layout="${date}: ${message} ${stacktrace}" />
	</targets>
	<!--[設定] 紀錄規則-->
	<rules>
		<logger name="*" levels="Trace,Debug,Info,Warn,Error" writeTo="file" />
		<logger name="*" level="Fatal" writeTo="eventlog" />
		<logger name="*" level="Fatal" writeTo="FatalFile" />
	</rules>
</nlog>
