
@{
    ViewBag.Title = "RegisterStep2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>和泰集團會員註冊</title>


    <link rel="stylesheet" href="~/Content/HotaiPayCss/bootstrap.css">
    <link rel="stylesheet" href="~/Content/HotaiPayCss/style.css">
    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/HotaiPayJS/ActionJS/RegisterStep2.js"></script>

</head>

<body>

    <nav></nav>
    <header class="d-flex justify-content-center align-items-center"><h6 style="margin-top: 8px;">和泰集團會員註冊</h6></header>

@using (Html.BeginForm("DoSignUp", "HotaiPay", FormMethod.Post))
{

<div class="container" style="max-width: 414px;position:relative">
    <div class="msform mt-4">
        <!-- progressbar -->
        <ul id="progressbar">
            <li></li>
            <li class="active"></li>
            <li></li>
        </ul>

    </div>
    <div class="mt-3">
        <p class="text-gray">
            請輸入6至12個字元，<br>
            須混合使用英文大寫、英文小寫、數字，<br>
            英文字母大小寫請留意，以利下次順利登入。
        </p>
    </div>

    <div class="input-box">
        <input id="demo_input" class="input-light" type="password" placeholder="密碼" name="Pwd">
        <label><img src="../images/eye-slash-regular.svg" alt="" id="eyes" name="eyesPwd"  class="eyeClick"></label>
    </div>
    <div class="text-left">
        <p style="color:red;">@Html.ValidationMessage("Pwd")</p>
    </div>
    <div class="input-box">
        <input id="confirmPwd" class="input-light" type="password" placeholder="密碼" name="PwdConfirm">
    </div>
    <div class="text-left">
        <p style="color:red;">@Html.ValidationMessage("PwdConfirm")</p>
    </div>
    <div class="buttonBox d-none d-sm-block desktop-margin-top">
        <!-- 填寫資料後變成切換class成btn-blue -->
        <button class="btn btn-disable-gray" style="max-width: 414px;" id="nextStep1" type="submit" disabled>下一步</button>
        <!-- 填寫資料後變成切換class成btn-blue -->
    </div>
    <div class="buttonBox text-left d-none d-sm-block" style="max-width: 414px;">
        <p class="text-gray mt-3">
            提醒您：<br>
            完成密碼設定即取得和泰集團會員帳號，日後若需修改/填補註冊資料，請直接以此密碼登入。
        </p>
    </div>
</div>

<div class="footer-btn-box footer-btn-margin d-block d-sm-none">
    <div class="buttonBox">
        <!-- 填寫資料後變成切換class成btn-blue -->
        <button class="btn btn-disable-gray" style="max-width: 414px;" id="nextStep2" type="submit" disabled>下一步</button>
        <!-- 填寫資料後變成切換class成btn-blue -->
    </div>
    <div class="buttonBox text-left" style="max-width: 414px;">
        <p class="text-gray mt-3">
            提醒您：<br>
            完成密碼設定即取得和泰集團會員帳號，日後若需修改/填補註冊資料，請直接以此密碼登入。
        </p>
    </div>
</div>

}

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>



