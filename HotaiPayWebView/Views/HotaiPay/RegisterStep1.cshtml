
@{
    ViewBag.Title = "RegisterStep1";
    //string msg = ViewData["msg"]==null?"": ViewData["msg"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>和泰集團會員註冊</title>


    <link rel="stylesheet" href="~/Content/HotaiPayCss/bootstrap.css">
    <link rel="stylesheet" href="~/Content/HotaiPayCss/style.css">
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/HotaiPayJS/ActionJS/RegisterStep1.js" type="text/javascript"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<body>


    <header class="d-flex justify-content-center align-items-center"><h6 style="margin-top: 8px;">和泰集團會員註冊</h6></header>
    <div class="container" style="max-width: 414px;position:relative">
        <div class="msform mt-4">
            <!-- progressbar -->
            <ul id="progressbar">
                <li class="active"></li>
                <li></li>
                <li></li>
            </ul>

        </div>

        <div class="mt-4">

            <form class="form-inline d-flex flex-row justify-content-between align-items-start" method="post" action="GetOtpCode">
                <div class="form-group">
                    <input type="text" class="form-control input-light" id="phone" name="phone" placeholder="0912345678" value="@ViewBag.Phone">
                </div>
                <button type="submit" class="btn btn-blue-small mb-2" id="Optbtn">發送驗證碼</button>
                <p id="pwdHint" style="color:red;">@ViewBag.PhoneAlert</p>
            </form>
        </div>
        
    </div>
    @using (Html.BeginForm("CheckOtpCode", "HotaiPay", FormMethod.Post))
    {
        <div class="container" style="max-width: 414px;position:relative">
            <div class="mt-4">

                <input type="text" id="otpCode" class="form-control input-light" name="otpCode" placeholder="輸入驗證碼" value="@ViewBag.OtpCode" required>
                <p id="pwdHint" style="color:red;">@ViewBag.OtpAlert</p>
            </div>
        </div>
        <div class="footer-btn-box footer-btn-margin">
            <div class="buttonBox">
                <button type="submit" class="btn btn-disable-gray" id="nextStep">
                    下一步
                </button>
                <!-- 驗證碼輸入後class改為btn-blue -->
            </div>
        </div>
    }
            <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <!-- Include all compiled plugins (below), or include individual files as needed -->
</body>
</html>
