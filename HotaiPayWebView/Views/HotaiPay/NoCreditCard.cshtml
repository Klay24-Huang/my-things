
@{
    ViewBag.Title = "NoCreditCard";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")" type="text/javascript"></script>
    <script src="~/Scripts/HotaiPayJS/ActionJS/no-creditcard.js" type="text/javascript"></script>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>和泰Pay設定</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/HotaiPayCss/style.css">
</head>
<body>

    <header class="d-flex justify-content-center align-items-center"><h6 style="margin-top: 8px;">和泰Pay設定</h6></header>

    <div class="container" style="max-width: 414px;" id="CardList">
        <div class="mt-4">
            <p class="text-gray">請選擇您欲綁定的信用卡</p>
        </div>
        
        <div class="new-card d-flex ctbc-card mt-5" id="bindNewCard" onclick="goAddNewCard()">
            
            <div class="w-100" >
                <span>  <img class="mr-2" src="~/images/icon/credit_pay_card.svg" alt="">新增信用卡</span>
            </div>
            
            <div class="d-flex"><img class="align-self-center" src="~/images/icon/more.svg" alt=""></div>
        </div>
        
        </div>
    <footer  class="container">
        <button type="submit" class="btn btn-disable-gray" id="agree-btn" style="position: absolute; bottom: 0px; right: 0px;">
            進行信用卡綁定
        </button>
    </footer>
</body>
</html>

