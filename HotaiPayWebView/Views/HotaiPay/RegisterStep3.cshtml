
@{
    ViewBag.Title = "RegisterStep3";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>和泰集團會員註冊</title>
    <link rel="stylesheet" href="~/Content/HotaiPayCss/sweetalert.css">


    <link rel="stylesheet" href="~/Content/HotaiPayCss/bootstrap.css">
    <link rel="stylesheet" href="~/Content/HotaiPayCss/style.css">
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")" type="text/javascript"></script>
    @*<script src="~/Scripts/HotaiPayJS/ActionJS/RegisterStep3.js" type="text/javascript"></script>*@
    <script src="~/Scripts/HotaiPayJS/sweetalert.js" type="text/javascript"></script>
</head>

<body>
    <header class="d-flex justify-content-center align-items-center"><h6 style="margin-top: 8px;">和泰集團會員註冊</h6></header>
    @using (Html.BeginForm("SetSignUpProfile", "HotaiPay", FormMethod.Post, new { id = "ProfileForm" }))
    {
<div class="container" style="max-width: 414px;padding-bottom: 16px;">
    <div class="msform mt-4">
        <!-- progressbar -->
        <ul id="progressbar">
            <li></li>
            <li></li>
            <li class="active"></li>
        </ul>
    </div>

    <div class="mt-3">
        <p class="text-gray">請確實填寫個人資料，以確保您的會員權益</p>
    </div>

    <label>姓名</label>
    <input type="text" class="form-control input-light" placeholder="吳志賢" id="name" name="Name" value="@ViewBag.Name" required readonly="readonly">
    <p style="color:red;">@Html.ValidationMessage("Name")</p>
    <div class="credit-card-box mt-4">
        <div class="gender-choose mr-5"><input class="mr-1" type="radio" id="sex" name="Sex" value="male" checked="@ViewBag.MaleCheck">先生</div>
        <div class="gender-choose"><input class="mr-1" type="radio" id="sex" name="Sex" value="female" checked="@ViewBag.FemaleCheck">女士</div>
    </div>
    <p style="color:red;">@Html.ValidationMessage("Sex")</p>
    <label class="mt-4">身分證字號</label>
    <input type="text" class="form-control input-light" id="custid" name="CustID" placeholder="A123456789" value="@ViewBag.CustID" required readonly="readonly">
    <p style="color:red;">@Html.ValidationMessage("CustID")</p>
    <p style="color:red;">@ViewBag.CustIDAlert</p>
    <label class="mt-4">生日</label>
    <input type="text" class="form-control input-light" id="birth" name="Birth" placeholder="輸入生日 ex.19950101" value="@ViewBag.Birthday" required readonly="readonly">
    <p style="color:red;">@Html.ValidationMessage("Birth")</p>
    <label class="mt-4">Email</label>
    <input type="text" class="form-control input-light" id="email" name="Email" placeholder="orange@goonsdesign.com" value="@ViewBag.Email" required>
    <p style="color:red;">@Html.ValidationMessage("Email")</p>





    @*<button type="submit" class="btn btn-blue mt-4 sweet-1 d-block d-sm-none" id="redbtn" onclick="checkSubmit(this, event);">完成註冊</button>

        <div class="my-3">
            <p class="text-gray d-block d-sm-none">
                身分證字號、生日與會員服務與權益相關，請確實填寫，完成註冊後不可自行更改。<br>
                外籍人士請於「身分證字號」欄位輸入居留證號碼。
            </p>
        </div>*@


    <button type="submit" class="btn btn-blue mb-2" style="margin-top:168px ;" id="redbtn" onclick="checkSubmit(this, event);">完成註冊</button>

    <div class="my-3" style="margin-top:168px ;">
        <p class="text-gray">
            身分證字號、生日與會員服務與權益相關，請確實填寫，完成註冊後不可自行更改。<br>
            外籍人士請於「身分證字號」欄位輸入居留證號碼。
        </p>
    </div>


</div>
    }
        <script>
            window.onload = function () {
                if ($("#name").attr("value") === undefined)
                    $("#name").removeAttr("readonly");
                else
                    $("#name").attr("readonly", "readonly");

                if ($("#custid").attr("value") === undefined)
                    $("#custid").removeAttr("readonly");
                else
                    $("#custid").attr("readonly", "readonly");

                if ($("#email").attr("value") === undefined)
                    $("#email").removeAttr("readonly");
                else
                    $("#email").attr("readonly", "readonly");

                if ($("#birth").attr("value") === undefined)
                    $("#birth").removeAttr("readonly");
                else
                    $("#birth").attr("readonly", "readonly");
            }

            function checkSubmit(ctl, event) {
                event.preventDefault();
                swal({
                    title: "",
                    text: "身分證字號、生日與會員服務與權益相關，請確實填寫，完成註冊後不可自行更改。",
                    imageUrl: '../images/alert-popup.svg',
                    showCancelButton: true,
                    cancelButtonText: "取消",
                    cancelButtonClass: "btn-outline-gray-small",
                    confirmButtonClass: 'btn-blue-small',
                    confirmButtonText: '完成註冊'
                }, function (isConfirm) {
                    if (isConfirm) {
                        $("#ProfileForm").submit();
                    } else {
                        swal("Cancelled", "You have Cancelled Form Submission!", "error");
                    }
                }
                );
            };
        </script>





        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="~/Scripts/bootstrap.min.js"></script>

    </body>
</html>
