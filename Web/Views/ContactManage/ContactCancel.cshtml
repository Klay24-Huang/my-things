<div class="container mt-4">
    <!--card start-->
    <div class="card">
        <div class="card-header bg-secondary text-white">
           強制作廢
        </div>

            <ul class="list-group list-group-flush">
                <!--每一個li是一項查詢條件-->
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                訂單編號
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id='OrderNo' name='OrderNo' pattern="(H)[0-9]{1,7}" value="" >
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3 offset-md-2">

                                <button type="button" name="btnSend" id="btnSend" class="btn btn-primary">確定送出</button>
                                @*<button type="button" name="btnReset" id="btnReset" class="btn btn-secondary">取消</button>*@

                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        
        <input type="hidden" id="Account" name="Account" value="@((Session["Account"] == null) ? "" : Session["Account"].ToString())" />
     
    </div>

</div>

