@{
    string[] InvoiceKind = { "請選擇", "捐贈", "EMAIL", "二聯", "三聯式發票，請至官網查詢下載", "手機條碼載具", "自然人憑證載具" };
    int InvoiceKindLen = InvoiceKind.Length;
}
<div class="container mt-4">
        <!--card start-->
        <div class="card">
            <div class="card-header bg-secondary text-white">
                強制取還車
            </div>
            <ul class="list-group list-group-flush">
                <!--每一個li是一項查詢條件-->
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                *訂單編號
                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="text" name="OrderNo" id="OrderNo" value="" />
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                *動作類型
                            </div>
                            <div class="col-md-3">
                                <select class="form-control" id="type" name="type">
                                    <option value="-1">請選擇</option>
                                    <option value="0">強制取車</option>
                                    <option value="1">強制還車</option>
                                    <!--<option value="2">作廢</option>-->
                                </select>
                            </div>
                            <div class="col-md-3" id="divReturnDate" name="divReturnDate">
                                <!-- datepicker -->
                                <div class="custom-datepicker">
                                    <input class="dateTimePicker form-control" type="text" id="StartDate" name="StartDate" readonly="false" value="">
                                    <svg width="22" height="22" viewBox="0 0 22 22">
                                        <g transform="translate(0 3)" fill="#fff" stroke="#9fa4ac" stroke-width="1">
                                            <rect width="22" height="19" rx="3" stroke="none" />
                                            <rect x="0.5" y="0.5" width="21" height="18" rx="2.5" fill="none" />
                                        </g>
                                        <g transform="translate(0 3)" fill="#9fa4ac" stroke="#9fa4ac" stroke-width="1">
                                            <path d="M3,0H19a3,3,0,0,1,3,3V6a0,0,0,0,1,0,0H0A0,0,0,0,1,0,6V3A3,3,0,0,1,3,0Z" stroke="none" />
                                            <path d="M3,.5H19A2.5,2.5,0,0,1,21.5,3V5a.5.5,0,0,1-.5.5H1A.5.5,0,0,1,.5,5V3A2.5,2.5,0,0,1,3,.5Z" fill="none" />
                                        </g>
                                        <g transform="translate(3.633 -0.005)">
                                            <rect id="Rectangle_37" data-name="Rectangle 37" width="2" height="8" rx="1" transform="translate(0.367 0.005)" fill="#9fa4ac" />
                                            <rect id="Rectangle_38" data-name="Rectangle 38" width="2" height="8" rx="1" transform="translate(11.367 0.005)" fill="#9fa4ac" />
                                        </g>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                動作用途
                            </div>
                            <div class="col-md-3">
                                <select class="form-control" id="mode" name="mode">
                                    <option value="-1">請選擇</option>
                                    <option value="0">會員</option>
                                    <option value="1">清潔取還車</option>
                                    <option value="2">保修取還車</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item" id="returnInvoiceType">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                發票寄送方式
                            </div>
                            <div class="col-md-4">
                                <select class="form-control" name="InvoiceType" id="InvoiceType">
                                    @for (int i = 0; i < InvoiceKindLen; i++)
                                    {
                                        <option value="@(i)">@InvoiceKind[i]</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <select class="form-control" name="LoveCodeList" id="LoveCodeList"></select>
                                <input class="form-control" type="text" name="CARRIERID" id="CARRIERID" value="" />
                                <input class="form-control" type="text" name="NPOBAN" id="NPOBAN" value="" />
                                <input class="form-control" type="text" name="UniCode" id="UniCode" value="" />
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3 offset-md-2">
                                <button type="button" name="btnSend" id="btnSend" class="btn btn-primary">確認送出</button>
                                <input type="hidden" id="Account" name="Account" value="@((Session["Account"] == null) ? "" : Session["Account"].ToString())" />
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <!--end card-->
    </div>
