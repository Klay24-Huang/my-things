            }
            @if (feedBackLen > 0)
            {
                using (Html.BeginForm("FeedBackDownload", "Report", FormMethod.Post, new { id = "formFeedBackDownload", name = "formFeedBackDownload" }))
                {
                    <li class="list-group-item">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-3 offset-md-2">
                                    <button id="btnDownload" name="btnDownload" class="btn btn-outline-primary">匯出excel</button>
                                    <input type="hidden" name="carid" id="carid" value="@ViewData["carid"]">
                                    <input type="hidden" name="objStation" id="objStation" value="@ViewData["objStation"]">
                                    <input type="hidden" name="SDate" id="SDate" value="@ViewData["SDate"]">
                                    <input type="hidden" name="EDate" id="EDate" value="@ViewData["EDate"]">
                                    <input type="hidden" name="isHandle" id="isHandle" value="@ViewData["isHandle"]">
                                    <input type="hidden" name="userID" id="userID" value="@ViewData["userID"]">
                                </div>
                            </div>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>
    <!--end card-->
</div>
<!--查詢介面結束-->
<!--輸出表格-->
<div class="container mt-4" id="ShowSetCardPanel" style="max-width:1500px;">

    <table class="table bg-white" data-limit-navigation="5">
        <thead class="text-white bg-primary">
            @if (feedBackLen == 0)
            {
                <tr>
                    <th data-sort-inital="descending" data-class="expand">回饋日期</th>
                    <th>回饋狀態</th>
                    <th>合約NO.</th>
                    <th>車號</th>
                    <th>ID</th>
                    <th>姓名</th>
                    <th>手機</th>
                    <th>內容</th>
                    <th>
                        狀態

                    </th>
                    <th data-hide="all">回饋照片</th>
                    <th>處理結果</th>
                    <th>處理人員</th>
                    <th></th>
                </tr>
            }
            else
            {
                <tr>
                    <th data-sort-inital="descending" data-class="expand">回饋日期</th>
                    <th>回饋狀態</th>
                    <th>合約NO.</th>
                    <th>車號</th>
                    <th>ID</th>
                    @*<th data-hide="all">姓名</th>
                    <th data-hide="all">手機</th>*@
                    <th>姓名</th>
                    <th>手機</th>
                    <th>內容</th>
                    <th>
                        狀態

                    </th>
                    @*<th data-hide="all">回饋照片</th>
                    <th data-hide="all">處理結果</th>*@
                    <th>回饋照片</th>
                    <th>處理結果</th>
                    <th>處理人員</th>
                    @*<th data-hide="all"></th>*@
                    <th></th>
                </tr>
            }
        </thead>
        <tbody>
            @if (feedBackLen == 0)
            {
                <tr>
                    <td colspan="13" class="text-center">查無結果</td> @*13*@
                </tr>
            }
            else
            {
                for (int i = 0; i < feedBackLen; i++) 
                {
                    string status = (feedBackData[i].isHandle == 0) ? "未處理" : "已處理";
                    string orderStatus = (feedBackData[i].mode == 0) ? "取車" : "還車";
                    string fieldName = "handleDescript" + feedBackData[i].FeedBackID;
                    string PIC1 = (string.IsNullOrEmpty(feedBackData[i].PIC1) || feedBackData[i].PIC1 == "null") ? "無" : "<a href=\"" + (ImgURL + feedBackData[i].PIC1) + "\" target=\"_blank\">回饋照片一</a>";
                    string PIC2 = (string.IsNullOrEmpty(feedBackData[i].PIC2) || feedBackData[i].PIC2 == "null") ? "無" : "<a href=\"" + (ImgURL + feedBackData[i].PIC2) + "\" target=\"_blank\">回饋照片二</a>";
                    string PIC3 = (string.IsNullOrEmpty(feedBackData[i].PIC3) || feedBackData[i].PIC3 == "null") ? "無" : "<a href=\"" + (ImgURL + feedBackData[i].PIC3) + "\" target=\"_blank\">回饋照片三</a>";
                    string PIC4 = (string.IsNullOrEmpty(feedBackData[i].PIC4) || feedBackData[i].PIC4 == "null") ? "無" : "<a href=\"" + (ImgURL + feedBackData[i].PIC4) + "\" target=\"_blank\">回饋照片四</a>";
                    try
                    {
                        if (PIC1 != "無")
                        {
                            string uri = ImgURL + feedBackData[i].PIC1;
                            PIC1 = "<input type=\"button\" class='btn btn-outline-info' value=\"顯示圖片一\" onclick=showPic(\"" + uri + "\",\"img1_" + feedBackData[i].FeedBackID + "\"); /> ";
                        }
                    }
                    catch (Exception ex)
                    {
                        PIC1 = "讀取照片發生錯誤：" + ex.Message;
                    }
                    try
                    {
                        if (PIC2 != "無")
                        {
                            string uri = ImgURL + feedBackData[i].PIC2;
                            PIC2 = "<input type=\"button\" class='btn btn-outline-info' value=\"顯示圖片二\" onclick=showPic(\"" + uri + "\",\"img2_" + feedBackData[i].IDNO + "\"); /> ";
                        }

                    }
                    catch (Exception ex)
                    {
                        PIC2 = "已刪除照片";
                    }
                    try
                    {
                        if (PIC3 != "無")
                        {
                            string uri = ImgURL + feedBackData[i].PIC3;
                            PIC3 = "<input type=\"button\" class='btn btn-outline-info' value=\"顯示圖片三\" onclick=showPic(\"" + uri + "\",\"img3_" + feedBackData[i].IDNO + "\"); />";
                        }

                    }
                    catch (Exception ex)
                    {
                        PIC3 = "已刪除照片";
                    }
                    try
                    {
                        if (PIC4 != "無")
                        {
                            string uri = ImgURL + feedBackData[i].PIC4;
                            PIC4 = "<input type=\"button\" class='btn btn-outline-info' value=\"顯示圖片四\" onclick=showPic(\"" + uri + "\",\"img4_" + feedBackData[i].IDNO + "\"); />";
                        }
                    }
                    catch (Exception ex)
                    {
                        PIC4 = "已刪除照片";
                    }
                    <tr>
                        <td>@feedBackData[i].MKTime.ToString("yyyy/MM/dd HH:mm")</td>
                        <td>@orderStatus</td>
                        <td>@((feedBackData[i].OrderNo == null) ? feedBackData[i].IDNO : ("H" + feedBackData[i].OrderNo.ToString().PadLeft(7, '0')))</td>
                        <td>@feedBackData[i].CarNo</td>
                        <td> @feedBackData[i].IDNO</td>
                        <td> @feedBackData[i].MEMCNAME</td>
                        <td> @feedBackData[i].MEMTEL</td>
                        <td style="max-width:100px;word-break: break-all;"> @feedBackData[i].descript</td>
                        @if (feedBackData[i].isHandle == 0)
                        {
                            <td>
                                <select class="form-control" name="status" id="status">
                                    <option value="0">未處理</option>
                                    <option value="1">已處理</option>
                                </select>
                            </td>
                            <td>@Html.Raw(PIC1) <br> @Html.Raw(PIC2)<br> @Html.Raw(PIC3) <br> @Html.Raw(PIC4) <br></td>
                            <td>
                                <textarea class="form-control" name="@fieldName" id="@fieldName"></textarea>
                            </td>
                            <td></td>
                            <td><input type="button" class="btn btn-info" value="儲存" onclick=doHandle('@feedBackData[i].FeedBackID','@Account'); /></td>

                        }
                        else
                        {
                            <td>@status</td>
                            <td>@Html.Raw(PIC1) <br> @Html.Raw(PIC2)<br> @Html.Raw(PIC3) <br> @Html.Raw(PIC4) <br></td>
                            <td>@feedBackData[i].handleDescript</td>
                            <td>@feedBackData[i].opt</td>
                            <td></td>
                        }
                    </tr>
                }
            }

        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="13" class="text-center"> @*13*@
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
