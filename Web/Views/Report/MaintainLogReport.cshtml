<!--查詢介面結束-->
<!--輸出表格-->
<div class="container mt-4" id="ShowSetCardPanel">

    <table class="table bg-white" data-limit-navigation="5">
        <thead class="text-white bg-primary">
            @if (CleanDataLen == 0)
            {
            <tr>
                <th data-sort-inital="descending" data-class="expand">整備人員</th>
                <th>訂單編號</th>
                <th>車號</th>
                <th>據點</th>
                <th>狀態</th>
                <th>實際取車</th>
                <th>實際還車</th>
                <th data-hide="all">車外清潔</th>
                <th data-hide="all">車內清潔</th>
                <th data-hide="all">車輛救援</th>
                <th data-hide="all">車輛調度</th>
                <th data-hide="all">車輛調度(路邊租還)</th>
                <th data-hide="all">保養</th>
                <th data-hide="all">備註</th>
                <th data-hide="all">車內照</th>
                <th data-hide="all">車外照</th>
                <th data-hide="all">清潔時幾天未清</th>
                <th data-hide="all">出租次數</th>

            </tr>
            }
            else
            {
        <tr>
            <th data-sort-inital="descending" data-class="expand">整備人員</th>
            <th>訂單編號</th>
            <th>車號</th>
            <th>據點</th>
            <th>狀態</th>
            <th>實際取車</th>
            <th>實際還車</th>
            <th data-hide="all">車外清潔</th>
            <th data-hide="all">車內清潔</th>
            <th data-hide="all">車輛救援</th>
            <th data-hide="all">車輛調度</th>
            <th data-hide="all">車輛調度(路邊租還)</th>
            <th data-hide="all">保養</th>
            <th data-hide="all">備註</th>
            <th data-hide="all">車內照</th>
            <th data-hide="all">車外照</th>
            <th data-hide="all">清潔時幾天未清</th>
            <th data-hide="all">出租次數</th>
        </tr>
            }
        </thead>
        <tbody>
            @if (CleanDataLen == 0)
            {
                <tr>
                    <td colspan="18" class="text-center">查無結果</td>


                </tr>
            }
            else
            {

                for (int i = 0; i < CleanDataLen; i++)
                {

                    string status = "已預約";
                    string inPic = "";
                    string outPic = "";
                    double totalDay = ((lstCleanData[i].lastCleanTime.ToString("yyyy-MM-dd HH:mm:ss")== "1900-01-01 00:00:00") ? DateTime.Now.Subtract(lstCleanData[i].lastCleanTime).TotalDays : -1);
                    string totalDayStr = (totalDay == -1) ? "從未清潔" : ((totalDay < 1) ? Math.Round(DateTime.Now.Subtract(lstCleanData[i].lastCleanTime).TotalHours, MidpointRounding.AwayFromZero) + "小時" : Math.Round(totalDay).ToString());
                    string StartTime =(lstCleanData[i].OrderStatus<1|| lstCleanData[i].OrderStatus==4)?"未取車":lstCleanData[i].BookingStart.ToString("yyyy-MM-dd HH:mm:ss").Replace("1900-01-01 00:00:00", "未取車");
                    string EndTime = (lstCleanData[i].OrderStatus == 1 ) ? "未還車":lstCleanData[i].BookingEnd.ToString("yyyy-MM-dd HH:mm:ss").Replace("1900-01-01 00:00:00", "未還車");
                    if (EndTime!="未還車" && StartTime != "未取車")
                    {
                        if(lstCleanData[i].BookingEnd< lstCleanData[i].BookingStart)
                        {
                            EndTime = lstCleanData[i].BookingEnd.AddHours(8).ToString("yyyy-MM-dd HH:mm:ss");
                        }
                    }
                    if (lstCleanData[i].incarPic == "0")
                    {
                        inPic = "無";
                    }
                    else
                    {

                        inPic = "<input type=\"button\" value=\"顯示圖片\" onclick=showPic('" + ImgURL + lstCleanData[i].incarPicStr + "',0);>";
                    }
                    if (lstCleanData[i].outcarPic == "0")
                    {
                        outPic = "無";
                    }
                    else
                    {
                        outPic = "<input type=\"button\" value=\"顯示圖片\" onclick=showPic('" + ImgURL + lstCleanData[i].outcarPicStr + "',1);>";
                    }
                    if (lstCleanData[i].OrderStatus == 1)
                    {
                        status = "已取車";
                    }
                    else if (lstCleanData[i].OrderStatus == 2)
                    {
                        status = "已還車";
                    }
                    else if (lstCleanData[i].OrderStatus == 3)
                    {
                        status = "已取消";
                    }
                    else if (lstCleanData[i].OrderStatus == 4)
                    {
                        status = "逾時未取車(系統強制取消)";
                    }
                    else if (lstCleanData[i].OrderStatus == 5)
                    {
                        status = "逾時未還車(系統強制釋放)";
                    }
                    <tr>

                        <td>@lstCleanData[i].UserID</td>
                        <td>@("H" + lstCleanData[i].OrderNum)</td>
                        <td>@lstCleanData[i].CarNo</td>
                        <td>@lstCleanData[i].lend_place</td>
                        <td>@status</td>
                        <td>@StartTime</td>
                        <td>
                            @*@((EndTime!= "未還車" && StartTime!= "未取車")?((lstCleanData[i].BookingEnd<lstCleanData[i].BookingStart)? lstCleanData[i].BookingEnd.AddHours(8).ToString("yyyy-MM-dd HH:mm:ss"): lstCleanData[i].BookingEnd.ToString("yyyy-MM-dd HH:mm:ss")))*@
                                                @if (EndTime != "未還車" && StartTime != "未取車")
                                                {
                                                    if (lstCleanData[i].BookingEnd < lstCleanData[i].BookingStart)
                                                    {
                                                        @lstCleanData[i].BookingEnd.AddHours(8).ToString("yyyy-MM-dd HH:mm:ss")
                                                    }
                                                    else
                                                    {
                                                        @lstCleanData[i].BookingEnd.ToString("yyyy-MM-dd HH:mm:ss")
                                                    }
                                                }
                                            </td>
                        <td>@((lstCleanData[i].outsideClean == 1) ? "✔" : "✖")</td>
                        <td>@((lstCleanData[i].insideClean == 1) ? "✔" : "✖")</td>
                        <td>@((lstCleanData[i].rescue == 1) ? "✔" : "✖")</td>
                        <td>@((lstCleanData[i].dispatch == 1) ? "✔" : "✖")</td>
                        <td>@((lstCleanData[i].Anydispatch == 1) ? "✔" : "✖")</td>
                        <td>@((lstCleanData[i].Maintenance == 1) ? "✔" : "✖")</td>
                        <td>@lstCleanData[i].remark</td>
                        <td>@Html.Raw(inPic)</td>
                        <td>@Html.Raw(outPic)</td>
                        <td>@totalDayStr</td>
                        <td>@lstCleanData[i].lastRentTimes</td>
                    </tr>

                }

            }

        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="18" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
