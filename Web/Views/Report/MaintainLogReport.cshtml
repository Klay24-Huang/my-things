            }

            @if (CleanDataLen > 0)
            {
                <li class="list-group-item">
                    @using (Html.BeginForm("MaintainLogReportDownload", "Report", FormMethod.Post, new { id = "formMaintainLogReportDownload" }))
                    {
                        <button id="btnDownload" name="btnDownload" class="btn btn-primary">匯出excel</button>

                        <input type="hidden" name="SDate" id="SDate" value="@ViewData["SDate"]">
