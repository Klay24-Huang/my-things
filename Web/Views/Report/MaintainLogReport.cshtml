@model  IEnumerable<Domain.TB.BackEnd.BE_CleanData>
@{
    int CleanDataLen = 0;
    List<Domain.TB.BackEnd.BE_CleanData> lstCleanData = new List<Domain.TB.BackEnd.BE_CleanData>();
    string StorageBaseURL = (System.Configuration.ConfigurationManager.AppSettings["StorageBaseURL"] == null) ? "" : System.Configuration.ConfigurationManager.AppSettings["StorageBaseURL"].ToString();

    string ImgURL = StorageBaseURL + "maintain/";
    //var ticket = (FormsIdentity)User.Identity;
    if (null == Model)
    {
        CleanDataLen = 0;
    }
    else
    {
        lstCleanData = Model.ToList<Domain.TB.BackEnd.BE_CleanData>();
        CleanDataLen = lstCleanData.Count();

    }

}
<!--查詢介面-->
<div class="container mt-4">
    <!--card start-->
    <div class="card">
        <div class="card-header bg-secondary text-white">
            整備人員報表查詢
        </div>

        <ul class="list-group list-group-flush">
            <!--每一個li是一項查詢條件-->
            @using (Html.BeginForm("MaintainLogReport", "Report", FormMethod.Post, new { id = "formMaintainLogReport", @class = "form-horizontal" }))
