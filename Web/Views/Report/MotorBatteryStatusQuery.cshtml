@model IEnumerable<Domain.TB.BackEnd.BE_MotorBatteryStatus>
@{
    string CarNo = (ViewData["CarNo"] == null) ? "" : ViewData["CarNo"].ToString();
    string SendDate = (ViewData["SendDate"] == null) ? "" : ViewData["SendDate"].ToString();
    string StartDate = (ViewData["SDate"] == null) ? "" : ViewData["SDate"].ToString();
    string EndDate = (ViewData["EDate"] == null) ? "" : ViewData["EDate"].ToString();


    int ResultLen = 0;
    List<Domain.TB.BackEnd.BE_MotorBatteryStatus> lstData = null;
    if (Model != null)
    {
        lstData = new List<Domain.TB.BackEnd.BE_MotorBatteryStatus>();
        lstData = Model.ToList();
        ResultLen = lstData.Count;
    }

}

<!--查詢介面-->
<div class="container mt-4">
    <!--card start-->
    <div class="card">
        <div class="card-header bg-secondary text-white">
            機車電池狀態歷程查詢
        </div>
        @using (Html.BeginForm("MotorBatteryStatusQuery", "Report", FormMethod.Post, new { id = "frmMotorBatteryStatusQuery", @class = "form-horizontal" }))
        {
            <ul class="list-group list-group-flush">
                <!--每一個li是一項查詢條件-->
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                車號
                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="text" name="CarNo" id="CarNo" value="@CarNo" />

                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                發送日期
                            </div>
                            <div class="col-md-3">
                                <!-- datepicker -->
                                <div class="custom-datepicker">
                                    <input class="datePicker form-control" type="text" id="SendDate" name="SendDate" value="@(SendDate)" readonly="false">
                                    <svg width="22" height="22" viewBox="0 0 22 22">
                                        <g transform="translate(0 3)" fill="#fff" stroke="#9fa4ac" stroke-width="1">
                                            <rect width="22" height="19" rx="3" stroke="none" />
                                            <rect x="0.5" y="0.5" width="21" height="18" rx="2.5" fill="none" />
                                        </g>
                                        <g transform="translate(0 3)" fill="#9fa4ac" stroke="#9fa4ac" stroke-width="1">
                                            <path d="M3,0H19a3,3,0,0,1,3,3V6a0,0,0,0,1,0,0H0A0,0,0,0,1,0,6V3A3,3,0,0,1,3,0Z" stroke="none" />
                                            <path d="M3,.5H19A2.5,2.5,0,0,1,21.5,3V5a.5.5,0,0,1-.5.5H1A.5.5,0,0,1,.5,5V3A2.5,2.5,0,0,1,3,.5Z" fill="none" />
                                        </g>
                                        <g transform="translate(3.633 -0.005)">
                                            <rect id="Rectangle_37" data-name="Rectangle 37" width="2" height="8" rx="1" transform="translate(0.367 0.005)" fill="#9fa4ac" />
                                            <rect id="Rectangle_38" data-name="Rectangle 38" width="2" height="8" rx="1" transform="translate(11.367 0.005)" fill="#9fa4ac" />
                                        </g>
                                    </svg>
                                </div>
                            </div>

                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3 offset-md-2">
                                <button type="submit" class="btn btn-primary">查詢</button>
                                <button type="reset" class="btn btn-outline-secondary btn-clear">清除</button>
                                <button type="button" name="btnExplode" id="btnExplode" class="btn btn-info">匯出</button>
                                <input type="hidden" name="len" id="len" value="@ResultLen" />
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        }
    </div>
    <!--end card-->
</div>

@using (Html.BeginForm("ExplodeMotorBatteryStatusQuery", "Report", FormMethod.Post, new { id = "frmMotorBatteryStatusExplode" }))
{
    <input type="hidden" id="ExplodeCarNo" name="ExplodeCarNo" value="">
    <input type="hidden" id="ExplodeSendDate" name="ExplodeSendDate" value="">
}

<!--查詢介面結束-->
<!--輸出表格-->
<div class="container mt-4">
    <div class="card">
        <div class="card-header  text-white" style="background-color: #9fa4ac;">
            查詢結果
        </div>
    </div>
    <div>
        <table class="table table-striped bg-white mt-4 " data-limit-navigation="5">
            <thead class="text-white bg-primary">
                <tr>
                    <th data-sort-ignore="true">
                    </th>
                    <th scope="col">車號</th>
                    <th scope="col">CID</th>
                    <th scope="col">2TBA</th>
                    <th scope="col">3TBA</th>
                    <th scope="col">MBA</th>
                    <th scope="col">RBA</th>
                    <th scope="col">LBA</th>
                    <th scope="col">時間</th>
                </tr>
            </thead>
            <tbody>
                @if (ResultLen == 0)
                {
                    <tr>
                        <td colspan="12" class="text-center">
                            查無結果
                        </td>
                    </tr>
                }
                else
                {
                    for (int i = 0; i < ResultLen; i++)
                    {
                        <tr>
                            <td data-sort="false"></td>
                            <td scope="col">@(lstData[i].CarNo)</td>
                            <td scope="col">@(lstData[i].CID)</td>
                            <td scope="col">@(lstData[i].device2TBA)</td>
                            <td scope="col">@(lstData[i].device3TBA)</td>
                            <td scope="col">@(lstData[i].deviceMBA)</td>
                            <td scope="col">@(lstData[i].deviceRBA)</td>
                            <td scope="col">@(lstData[i].deviceLBA)</td>
                            <td scope="col">@(lstData[i].MKTime.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                        </tr>
                    }

                }

            </tbody>
            <tfoot class="hide-if-no-paging">
                <tr>
                    <td colspan="8" class="text-center">
                        <ul class="pagination"></ul>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script>
    var ResultLen = @ResultLen;
    var errorLine = '@((ViewData["errorLine"]==null)?"": ViewData["errorLine"].ToString())';
    var errorMsg = '@((ViewData["errorMsg"] == null)?"" : ViewData["errorMsg"].ToString())';
</script>
<!--輸出表格結束-->