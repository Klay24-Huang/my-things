@model  IEnumerable<Domain.TB.BackEnd.BE_MonthlyMain>
@{
    int subscriptDataLen = 0;
    List<Domain.TB.BackEnd.BE_MonthlyMain> subscriptData = new List<Domain.TB.BackEnd.BE_MonthlyMain>();
    //var ticket = (FormsIdentity)User.Identity;
    if (null == Model)
    {
        subscriptDataLen = 0;
    }
    else
    {
        subscriptData = Model.ToList<Domain.TB.BackEnd.BE_MonthlyMain>();
        subscriptDataLen = subscriptData.Count();

    }

}
<!--查詢介面-->
<div class="container mt-4">
    <!--card start-->
    <div class="card">
        <div class="card-header bg-secondary text-white">
            月租總表
        </div>

        <ul class="list-group list-group-flush">
            <!--每一個li是一項查詢條件-->
            @using (Html.BeginForm("MonthlyMainQuery", "Report", FormMethod.Post, new { id = "formMonthlyMainQuery", @class = "form-horizontal" }))
            {



                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                日期起迄日
                            </div>
                            <div class="col-md-3">
                                <!-- datepicker -->
                                <div class="custom-datepicker">
                                    <input class="datePicker form-control" type="text" id="SDate" name="SDate" value="@((ViewData["SDate"]==null)?"":ViewData["SDate"].ToString())" readonly="false">
                                    <svg width="22" height="22" viewBox="0 0 22 22">
                                        <g transform="translate(0 3)" fill="#fff" stroke="#9fa4ac" stroke-width="1">
                                            <rect width="22" height="19" rx="3" stroke="none" />
                                            <rect x="0.5" y="0.5" width="21" height="18" rx="2.5" fill="none" />
                                        </g>
                                        <g transform="translate(0 3)" fill="#9fa4ac" stroke="#9fa4ac" stroke-width="1">
                                            <path d="M3,0H19a3,3,0,0,1,3,3V6a0,0,0,0,1,0,0H0A0,0,0,0,1,0,6V3A3,3,0,0,1,3,0Z" stroke="none" />
                                            <path d="M3,.5H19A2.5,2.5,0,0,1,21.5,3V5a.5.5,0,0,1-.5.5H1A.5.5,0,0,1,.5,5V3A2.5,2.5,0,0,1,3,.5Z" fill="none" />
                                        </g>
                                        <g transform="translate(3.633 -0.005)">
                                            <rect id="Rectangle_37" data-name="Rectangle 37" width="2" height="8" rx="1" transform="translate(0.367 0.005)" fill="#9fa4ac" />
                                            <rect id="Rectangle_38" data-name="Rectangle 38" width="2" height="8" rx="1" transform="translate(11.367 0.005)" fill="#9fa4ac" />
                                        </g>
                                    </svg>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <!-- datepicker with time -->
                                <div class="custom-datepicker">
                                    <input class="datePicker form-control" type="text" id="EDate" name="EDate" value="@((ViewData["EDate"]==null)?"":ViewData["EDate"].ToString())" readonly="false">
                                    <svg width="22" height="22" viewBox="0 0 22 22">
                                        <g transform="translate(0 3)" fill="#fff" stroke="#9fa4ac" stroke-width="1">
                                            <rect width="22" height="19" rx="3" stroke="none" />
                                            <rect x="0.5" y="0.5" width="21" height="18" rx="2.5" fill="none" />
                                        </g>
                                        <g transform="translate(0 3)" fill="#9fa4ac" stroke="#9fa4ac" stroke-width="1">
                                            <path d="M3,0H19a3,3,0,0,1,3,3V6a0,0,0,0,1,0,0H0A0,0,0,0,1,0,6V3A3,3,0,0,1,3,0Z" stroke="none" />
                                            <path d="M3,.5H19A2.5,2.5,0,0,1,21.5,3V5a.5.5,0,0,1-.5.5H1A.5.5,0,0,1,.5,5V3A2.5,2.5,0,0,1,3,.5Z" fill="none" />
                                        </g>
                                        <g transform="translate(3.633 -0.005)">
                                            <rect id="Rectangle_37" data-name="Rectangle 37" width="2" height="8" rx="1" transform="translate(0.367 0.005)" fill="#9fa4ac" />
                                            <rect id="Rectangle_38" data-name="Rectangle 38" width="2" height="8" rx="1" transform="translate(11.367 0.005)" fill="#9fa4ac" />
                                        </g>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                會員帳號
                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="text" name="userID" id="userID" value="@((ViewData["userID"]==null)?"":ViewData["userID"].ToString())">

                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                時數狀態
                            </div>
                            <div class="col-md-3">
                                <select name="isHandle" id="isHandle" class="form-control">
                                    <option value="2">全部</option>
                                    <option value="0">無任何時數</option>
                                    <option value="1">尚有時數</option>

                                </select>

                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3 offset-md-2">
                                <input type="hidden" id="Account" name="Account" value="@((Session["Account"] == null) ? "" : Session["Account"].ToString())" />
                                <input type="hidden" id="len" name="len" value="@subscriptDataLen" />
                                <button type="submit" class="btn btn-primary">確認送出</button>

                            </div>
                        </div>
                    </div>
                </li>
            }

            @if (subscriptDataLen > 0)
            {
                <li class="list-group-item">
                    @using (Html.BeginForm("MonthlyMainQueryDownLoad", "Report", FormMethod.Post, new { id = "formMonthlyQueryDownLoad" }))
                    {
                    <button id="btnDownload" name="btnDownload" class="btn btn-primary">匯出excel</button>

                    <input type="hidden" name="SDate" id="SDate" value="@ViewData["SDate"]">
                    <input type="hidden" name="EDate" id="EDate" value="@ViewData["EDate"]">
                    <input type="hidden" name="isHandle" id="isHandle" value="@ViewData["isHandle"]">
                    <input type="hidden" name="userID" id="userID" value="@ViewData["userID"]">
                    }
                </li>
            }
        </ul>





    </div>
    <!--end card-->
</div>
<!--查詢介面結束-->
<!--輸出表格-->
<div class="container mt-4" id="ShowSetCardPanel">

    <table class="table bg-white" data-limit-navigation="5">
        <thead class="text-white bg-primary">
            @if (subscriptDataLen == 0)
            {
            <tr>
                <th data-sort-inital="descending" data-class="expand">帳號</th>
                <th>訂閱方案編號</th>
                <th>方案代碼</th>
                <th>方案名稱</th>
                <th>方案生效時間</th>
                <th>方案結束時間</th>
                <th>汽車－平日</th>
                <th>汽車－假日</th>
                <th>機車</th>
                <th>是否開啟自動續約</th>
                <th>方案是否綁約</th>
                <th>綁約期數</th>
            </tr>
            }
            else
            {
                <tr>
                    <th data-sort-inital="descending" data-class="expand">帳號</th>
                    <th>訂閱方案編號</th>
                    <th>方案代碼</th>
                    <th>方案名稱</th>
                    <th>方案生效時間</th>
                    <th>方案結束時間</th>
                    <th>汽車－平日</th>
                    <th>汽車－假日</th>
                    <th>機車</th>
                    <th>是否開啟自動續約</th>
                    <th>方案是否綁約</th>
                    <th>綁約期數</th>
                </tr>
            }
        </thead>
        <tbody>
            @if (subscriptDataLen == 0)
            {
                <tr>
                    <td colspan="9" class="text-center">查無結果</td>


                </tr>
            }
            else
            {
                for (int i = 0; i < subscriptDataLen; i++)
                {
        <tr>
            <td>@subscriptData[i].IDNO</td>
            <td>@subscriptData[i].SEQNO</td>
            <td>@subscriptData[i].ProjID</td>
            <td>@subscriptData[i].ProjNM</td>
            <td>@subscriptData[i].StartDate.ToString("yyyy/MM/dd HH:mm")</td>
            <td>@subscriptData[i].EndDate.ToString("yyyy/MM/dd HH:mm")</td>
            <td>@subscriptData[i].WorkDayHours</td>
            <td>@subscriptData[i].HolidayHours</td>
            <td> @((subscriptData[i].MotoTotalHours ).ToString("f1"))</td>
            <td>@subscriptData[i].AutomaticRenewal</td>
            <td>@subscriptData[i].IsTiedUp</td>
            <td>@subscriptData[i].MonProPeriod.ToString()</td>
        </tr>
                    
                }

            }

        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="9" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<div class="modal fade " id="surrounding_modal" tabindex="-1" role="dialog" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img src="" name="ReviewImg" id="ReviewImg" class="thumbnails" />
            </div>
            <div class="modal-footer">


                <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
</div>
<script language="javascript">
   var SD = "@ViewData["SDate"]";
    var ED = "@ViewData["EDate"]";
    var UserID = "@ViewData["userID"]";

   var isHandle = "@ViewData["isHandle"]";
    var outerOfDateRangeMsg  = "@ViewData["outerOfDateRangeMsg"]";

</script>
