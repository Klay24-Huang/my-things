@model IEnumerable<Domain.TB.BackEnd.BE_APILog>
@{
    List<Domain.TB.BackEnd.BE_APILog> lstData = null;
    string IPAddress = (ViewData["IPAddress"] == null) ? "" : ViewData["IPAddress"].ToString();
    string StartDate = (ViewData["StartDate"] == null) ? DateTime.Today.ToString("yyyy-MM-dd") : ViewData["StartDate"].ToString();
    string EndDate = (ViewData["EndDate"] == null) ? DateTime.Today.ToString("yyyy-MM-dd") : ViewData["EndDate"].ToString();
    int ResultLen = -1;

    if (Model != null)
    {
        lstData = Model.ToList();
        ResultLen = lstData.Count;
    }

}
<!--查詢介面-->
<div class="container mt-4">
    <!--card start-->
    <div class="card">
        <div class="card-header bg-secondary text-white">
            API Log 查詢
        </div>
        <form method="post" id="frmAPILogQuery" action="@Url.Action("APILogQuery")" enctype="multipart/form-data">
            <ul class="list-group list-group-flush">
                <!--每一個li是一項查詢條件-->
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                IP Address
                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="text" name="IPAddress" id="IPAddress" value="@IPAddress" />

                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                送出日期
                            </div>
                            <div class="col-md-3">
                                <!-- datepicker -->
                                <div class="custom-datepicker">
                                    <input class="datePicker form-control" type="text" id="StartDate" name="StartDate" value="@StartDate" readonly="false">
                                    <svg width="22" height="22" viewBox="0 0 22 22">
                                        <g transform="translate(0 3)" fill="#fff" stroke="#9fa4ac" stroke-width="1">
                                            <rect width="22" height="19" rx="3" stroke="none" />
                                            <rect x="0.5" y="0.5" width="21" height="18" rx="2.5" fill="none" />
                                        </g>
                                        <g transform="translate(0 3)" fill="#9fa4ac" stroke="#9fa4ac" stroke-width="1">
                                            <path d="M3,0H19a3,3,0,0,1,3,3V6a0,0,0,0,1,0,0H0A0,0,0,0,1,0,6V3A3,3,0,0,1,3,0Z" stroke="none" />
                                            <path d="M3,.5H19A2.5,2.5,0,0,1,21.5,3V5a.5.5,0,0,1-.5.5H1A.5.5,0,0,1,.5,5V3A2.5,2.5,0,0,1,3,.5Z" fill="none" />
                                        </g>
                                        <g transform="translate(3.633 -0.005)">
                                            <rect id="Rectangle_37" data-name="Rectangle 37" width="2" height="8" rx="1" transform="translate(0.367 0.005)" fill="#9fa4ac" />
                                            <rect id="Rectangle_38" data-name="Rectangle 38" width="2" height="8" rx="1" transform="translate(11.367 0.005)" fill="#9fa4ac" />
                                        </g>
                                    </svg>
                                </div>
                            </div>
                            -
                            <div class="col-md-3">
                                <!-- datepicker with time -->
                                <div class="custom-datepicker">
                                    <input class="datePicker form-control" type="text" id="EndDate" name="EndDate" value="@EndDate" readonly="false">
                                    <svg width="22" height="22" viewBox="0 0 22 22">
                                        <g transform="translate(0 3)" fill="#fff" stroke="#9fa4ac" stroke-width="1">
                                            <rect width="22" height="19" rx="3" stroke="none" />
                                            <rect x="0.5" y="0.5" width="21" height="18" rx="2.5" fill="none" />
                                        </g>
                                        <g transform="translate(0 3)" fill="#9fa4ac" stroke="#9fa4ac" stroke-width="1">
                                            <path d="M3,0H19a3,3,0,0,1,3,3V6a0,0,0,0,1,0,0H0A0,0,0,0,1,0,6V3A3,3,0,0,1,3,0Z" stroke="none" />
                                            <path d="M3,.5H19A2.5,2.5,0,0,1,21.5,3V5a.5.5,0,0,1-.5.5H1A.5.5,0,0,1,.5,5V3A2.5,2.5,0,0,1,3,.5Z" fill="none" />
                                        </g>
                                        <g transform="translate(3.633 -0.005)">
                                            <rect id="Rectangle_37" data-name="Rectangle 37" width="2" height="8" rx="1" transform="translate(0.367 0.005)" fill="#9fa4ac" />
                                            <rect id="Rectangle_38" data-name="Rectangle 38" width="2" height="8" rx="1" transform="translate(11.367 0.005)" fill="#9fa4ac" />
                                        </g>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3 offset-md-2">
                                <button type="submit" class="btn btn-primary">查詢</button>
                                <input type="hidden" id="Account" name="Account" value="@((Session["Account"]==null)?"":Session["Account"].ToString())" />
                                <input type="hidden" id="len" name="len" value="@ResultLen" />
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </form>
    </div>
    <!--end card-->
</div>
<!--查詢介面結束-->
<!--輸出表格-->
<div class="container mt-4">
    <table class="table bg-white" data-page-size data-paging-limit="5">
        <thead class="text-white bg-primary">
            <tr>
                <th data-sortable="false"></th>
                <th data-type="number"></th>
                <th>呼叫時間</th>
                <th>API中文名稱</th>
                <th>API名稱</th>
                <th>呼叫內容(簡)</th>
                <th data-hide="all">呼叫內容</th>
            </tr>
        </thead>
        <tbody>
            @if (ResultLen == 0)
            {
                <tr>
                    <td scope="row" colspan="12">查無資料</td>
                </tr>
            }
            else
            {
                for (int i = 0; i < ResultLen; i++)
                {
                <tr>
                    <td></td>
                    <td >@(i + 1)</td>
                    <td>
                        @(lstData[i].MKTime.ToString("yyyy/MM/dd HH:mm"))
                    </td>
                    <td>
                        @(lstData[i].APICName)
                    </td>
                    <td>
                        @(lstData[i].APIName)
                    </td>
                    <td>
                        @(lstData[i].APIInput==null || lstData[i].APIInput == ""?"": lstData[i].APIInput.Substring(0, lstData[i].APIInput.Length<20? lstData[i].APIInput.Length:20))
                    </td>
                    <td>
                        <textarea style="width:950px;height:100px;">@(lstData[i].APIInput.Trim())</textarea>
                    </td>
                </tr>
                }
            }
        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="12" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<!--輸出表格結束-->
