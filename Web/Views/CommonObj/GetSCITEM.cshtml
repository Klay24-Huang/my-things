@model IEnumerable<Domain.TB.BackEnd.BE_SCITEM>

@{
    Layout = null;
    List<SelectListItem> list = new List<SelectListItem>();
    string SCITEM_ = ((ViewData["_SCITEM"] == null) ? "0" : ViewData["_SCITEM"].ToString());
}
@if (Model != null)
{
    if (SCITEM_ == "0")
    {
        list.Add(new SelectListItem() { Text = "請選擇", Value = "", Selected = true });
    }
    else
    {
        list.Add(new SelectListItem() { Text = "請選擇", Value = "" });
    }
    //list.Add(new SelectListItem() { Text = "請選擇", Value = "" });
}
@foreach (var Operator in Model)
{
    if (Operator.SCITEM == SCITEM_)
    {
        list.Add(new SelectListItem() { Text = Operator.SCITEM, Value = Operator.SCITEM.ToString(), Selected = true });
    }
    else
    {
        list.Add(new SelectListItem() { Text = Operator.SCITEM, Value = Operator.SCITEM.ToString() });
    }
    //list.Add(new SelectListItem() { Text = Operator.SCITEM, Value = Operator.SCITEM.ToString() });
}


@Html.DropDownList("ddlOperator", list, new { Class = "form-control" })
