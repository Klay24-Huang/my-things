    if (Model != null)
    {
        obj = Model;

        MileStoneLen = (obj.MileStone == null) ? 0 : obj.MileStone.Count();
        //MileStoneDetail = (obj.MileStoneDetail == null) ? 0 : obj.MileStoneDetail.Count();
        MileStoneDetail = obj.JsonMileStoneDetail;
    }

}



