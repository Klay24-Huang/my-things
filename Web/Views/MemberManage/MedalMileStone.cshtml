
@model IEnumerable<Domain.TB.BackEnd.BE_MileStone>

@{
    string IDNO = (ViewData["IDNO"] == null) ? "" : ViewData["IDNO"].ToString();
    string Mode = (ViewData["Mode"] == null) ? "" : ViewData["Mode"].ToString();
    string AuditMode = (ViewData["AuditMode"] == null) ? "" : ViewData["AuditMode"].ToString();

    int ResultLen = -1;
    List<Domain.TB.BackEnd.BE_MileStone> lstData = null;
    if (Model != null)
    {
        lstData = new List<Domain.TB.BackEnd.BE_MileStone>();
        lstData = Model.ToList();
        ResultLen = lstData.Count;
    }
}



<!--查詢介面-->
<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-secondary text-white">
            會員徽章
        </div>
    </div>
</div>
<div class="container mt-4">
    <!--card start-->

    <div class="card">
        <div class="card-header text-white" style="background-color: #9fa4ac;">
            查詢條件
        </div>
        @using (Html.BeginForm("MedalMileStone", "MemberManage", FormMethod.Post, new { id = "frmMedalMileStone", @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                處理項目
                            </div>
                            <div class="col-md-3">
                                <select class="form-control" name="AuditMode" id="AuditMode" value="@AuditMode">
                                    <option value="0">查詢</option>
                                    <option value="1">新增</option>
                                    @*<option value="2">批次匯入</option>*@
                                </select>
                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                身份證
                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="text" name="IDNO" id="IDNO" value="@IDNO" />
                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item" style="display:none;" id="Choice">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                下拉式選單
                            </div>
                            <div class="col-md-3">
                                <select class="form-control" name="ChoiceSelect" id="ChoiceSelect">
                                    <option value="1">回報違規停車照片給客服</option>
                                    <option value="2">填寫官方問卷</option>
                                    <option value="3">回報系統bug</option>
                                    <option value="4">提供iRent建議</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3 offset-md-2">
                                @*<button type="submit" id="btnSubmit" class="btn btn-info btn-submit">查詢</button>*@ @*會強制查詢，就算id沒填也一樣*@
                                <button type="button" id="btnSubmit" class="btn btn-info btn-submit">查詢</button>
                                <input type="hidden" id="len" name="len" value="@ResultLen" />
                                <input type="hidden" id="modeData" name="modeData" value="@(Mode)" />
                                <input type="hidden" id="Account" name="Account" value="@((Session["Account"] == null) ? "" : Session["Account"].ToString())" />
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        }
    </div>
    <!--end card-->
</div>
<!--查詢介面結束-->
<div class="container mt-4">
    <div class="card">
        <div class="card-header  text-white" style="background-color: #9fa4ac;">
            查詢結果
        </div>
    </div>
</div>
<!--輸出表格-->
<div class="container mt-4">
    <table class="table table-striped bg-white mt-4 " data-limit-navigation="5">
        <thead class="text-white bg-primary">
            <tr>
                <th data-sort-ignore="true">
                </th>
                <th scope="col">會員姓名</th>
                <th scope="col">徽章名稱</th>
                <th scope="col">系列名稱</th>
                <th scope="col">寫入時間</th>
                <th scope="col">進度</th>
                @*<th data-sort-ignore="true">審核</th>*@
            </tr>
        </thead>
        <tbody>
            @if (ResultLen == 0)
            {
                <tr>
                    <td colspan="9" class="text-center">
                        查無結果
                    </td>
                </tr>
            }
            else
            {
                for (int i = 0; i < ResultLen; i++)
                {
                    <tr>
                        <td data-sort="false"></td>
                        <td scope="col">@(lstData[i].MEMCNAME)</td>
                        <td scope="col">@(lstData[i].MileStoneName)</td>
                        <td scope="col">@(lstData[i].ActionName)</td>
                        <td scope="col">@(lstData[i].MKTime)</td>
                        <td scope="col">@(lstData[i].Detail)</td>
                    </tr>
                }

            }

        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="4" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<!--輸出表格結束-->

<script>
    var Mode = '@Mode';
    var errorLine = '@((ViewData["errorLine"]==null)?"": ViewData["errorLine"].ToString())';
    var errorMsg = '@((ViewData["errorMsg"] == null)?"" : ViewData["errorMsg"].ToString())';
    //var ResultDataLen = '@(ResultLen)';
</script>


