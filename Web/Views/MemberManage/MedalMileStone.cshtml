    string AuditMode = (ViewData["AuditMode"] == null) ? "" : ViewData["AuditMode"].ToString();

    Domain.TB.BackEnd.BE_AuditDetailCombind obj = null;
    int MileStoneLen = 0;
    //int MileStoneDetail = 0;
