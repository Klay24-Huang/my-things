@*@model IEnumerable<Domain.TB.BackEnd.BE_GetBlackLists>*@
@model Domain.TB.BackEnd.BE_AuditDetailCombind
@{
    string SDate = (ViewData["StartDate"] == null) ? "" : ViewData["StartDate"].ToString();
    string EDate = (ViewData["EndDate"] == null) ? "" : ViewData["EndDate"].ToString();
    string Phone = (ViewData["MobilePhone"] == null) ? "" : ViewData["MobilePhone"].ToString();

    int ResultLen = -1;
    //List<Domain.TB.BackEnd.BE_GetBlackLists> lstData = null;
    Domain.TB.BackEnd.BE_AuditDetailCombind obj = null;
    string BlackListsDetail = "";
    string BlackListsAccount = "";

    if (Model != null)
    {
        obj = Model;

        //lstData = new List<Domain.TB.BackEnd.BE_GetBlackLists>();
        //lstData = Model.ToList();
        ResultLen = (obj.BlackLists == null) ? 0 : obj.BlackLists.Count();
        BlackListsDetail = obj.JsonBlackListsDetail;
        BlackListsAccount = obj.JsonBlackListsAccount;
    }
}

<!--查詢介面-->
<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-secondary text-white">
            手機黑名單管理
        </div>
    </div>
</div>

<div class="container mt-4">
    <!--card start-->
    <div class="card">
        <div class="card-header text-white" style="background-color: #9fa4ac;">
            查詢條件
        </div>
        @using (Html.BeginForm("BlackList", "MemberManage", FormMethod.Post, new { id = "frmBlackList", @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <ul class="list-group list-group-flush">
                <!--每一個li是一項查詢條件-->
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                處理區分
                            </div>
                            <div class="col-md-3">
                                <select class="form-control" name="Mode" id="Mode">
                                    <option value="0">查詢</option>
                                    <option value="1">單筆新增</option>
                                    <option value="2">批次處理</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item" id="Date">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                黑名單加入日
                            </div>
                            <div class="col-md-3">
                                <!-- datepicker -->
                                <div class="custom-datepicker">
                                    <input class="datePicker form-control" type="text" id="StartDate" name="StartDate" value="@SDate">
                                    <svg width="22" height="22" viewBox="0 0 22 22">
                                        <g transform="translate(0 3)" fill="#fff" stroke="#9fa4ac" stroke-width="1">
                                            <rect width="22" height="19" rx="3" stroke="none" />
                                            <rect x="0.5" y="0.5" width="21" height="18" rx="2.5" fill="none" />
                                        </g>
                                        <g transform="translate(0 3)" fill="#9fa4ac" stroke="#9fa4ac" stroke-width="1">
                                            <path d="M3,0H19a3,3,0,0,1,3,3V6a0,0,0,0,1,0,0H0A0,0,0,0,1,0,6V3A3,3,0,0,1,3,0Z" stroke="none" />
                                            <path d="M3,.5H19A2.5,2.5,0,0,1,21.5,3V5a.5.5,0,0,1-.5.5H1A.5.5,0,0,1,.5,5V3A2.5,2.5,0,0,1,3,.5Z" fill="none" />
                                        </g>
                                        <g transform="translate(3.633 -0.005)">
                                            <rect id="Rectangle_37" data-name="Rectangle 37" width="2" height="8" rx="1" transform="translate(0.367 0.005)" fill="#9fa4ac" />
                                            <rect id="Rectangle_38" data-name="Rectangle 38" width="2" height="8" rx="1" transform="translate(11.367 0.005)" fill="#9fa4ac" />
                                        </g>
                                    </svg>
                                </div>
                            </div>
                            ~
                            <div class="col-md-3">
                                <!-- datepicker with time -->
                                <div class="custom-datepicker">
                                    <input class="datePicker form-control" type="text" id="EndDate" name="EndDate" value="@EDate">
                                    <svg width="22" height="22" viewBox="0 0 22 22">
                                        <g transform="translate(0 3)" fill="#fff" stroke="#9fa4ac" stroke-width="1">
                                            <rect width="22" height="19" rx="3" stroke="none" />
                                            <rect x="0.5" y="0.5" width="21" height="18" rx="2.5" fill="none" />
                                        </g>
                                        <g transform="translate(0 3)" fill="#9fa4ac" stroke="#9fa4ac" stroke-width="1">
                                            <path d="M3,0H19a3,3,0,0,1,3,3V6a0,0,0,0,1,0,0H0A0,0,0,0,1,0,6V3A3,3,0,0,1,3,0Z" stroke="none" />
                                            <path d="M3,.5H19A2.5,2.5,0,0,1,21.5,3V5a.5.5,0,0,1-.5.5H1A.5.5,0,0,1,.5,5V3A2.5,2.5,0,0,1,3,.5Z" fill="none" />
                                        </g>
                                        <g transform="translate(3.633 -0.005)">
                                            <rect id="Rectangle_37" data-name="Rectangle 37" width="2" height="8" rx="1" transform="translate(0.367 0.005)" fill="#9fa4ac" />
                                            <rect id="Rectangle_38" data-name="Rectangle 38" width="2" height="8" rx="1" transform="translate(11.367 0.005)" fill="#9fa4ac" />
                                        </g>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item" id="Phone">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                手機號碼
                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="text" name="MobilePhone" id="MobilePhone" value="@Phone" />
                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item" id="Import" style="display:none;">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                匯入清單
                            </div>

                            <div class="col-md-3">
                                <input type="file" class="jfilestyle" accept=".xlsx,.xls" placeholder="請上傳excel檔案" data-theme="blue" id="fileImport" name="fileImport" data-inputSize="" data-text="上傳檔案">
                            </div>
                            <div class="col-md-2">
                                限定.XLS/XLSX檔
                            </div>

                            <div class="col-md-3">
                                <button type="button" id="exampleDownload" name="exampleDownload" class="btn btn-primary">範例檔案下載</button>
                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3 offset-md-2">
                                <button type="button" name="btnExplode" id="btnExplode" class="btn btn-info">匯出</button>
                                <button type="button" name="btnImport" id="btnImport" class="btn btn-info btn-submit" style="display:none;">匯入</button>
                                <button type="button" id="btnQuery" class="btn btn-info btn-submit">查詢</button>
                                <button type="button" name="btnSend" id="btnSend" class="btn btn-info btn-submit" style="display:none;">確定</button>
                                <input type="hidden" name="Account" id="Account" value="@((Session["Account"] == null) ? "" : Session["Account"].ToString())" />
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        }
    </div>
    <!--end card-->
</div>

@using (Html.BeginForm("ExplodeBlackList", "MemberManage", FormMethod.Post, new { id = "frmBlackListExplode" }))
{
    <input type="hidden" id="ExplodeSDate" name="ExplodeSDate" value="">
    <input type="hidden" id="ExplodeEDate" name="ExplodeEDate" value="">
    <input type="hidden" id="ExplodeMobilePhone" name="ExplodeMobilePhone" value="">
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header  text-white" style="background-color: #9fa4ac;">
            查詢結果
        </div>
    </div>
</div>
<!--輸出表格-->
<div class="container mt-4">
    <table class="table table-striped bg-white mt-4 " data-limit-navigation="5">
        <thead class="text-white bg-primary">
            <tr>
                <th scope="col">手機號碼</th>
                <th scope="col">黑名單加入時間</th>
                <th scope="col" data-sort-ignore="true">重複帳號</th>
                <th scope="col" data-sort-ignore="true">修改歷程</th>
                <th scope="col" data-sort-ignore="true">移除黑名單</th>
            </tr>
        </thead>
        <tbody>
            @if (ResultLen == 0)
            {
                <tr>
                    <td colspan="5" class="text-center">
                        查無結果
                    </td>
                </tr>
            }
            else
            {
                for (int i = 0; i < ResultLen; i++)
                {
                    <tr>
                        <td scope="col">@(obj.BlackLists[i].Mobile)</td>
                        <td scope="col">@(obj.BlackLists[i].CreateDate)</td>
                        <td scope="col"><button type="button" class="btn btn-info" onclick="getaccount(@BlackListsAccount,'@(obj.BlackLists[i].Mobile)')" data-toggle="modal" data-target="#blacklistaccount_modal">檢視</button></td>
                        <td scope="col"><button type="button" class="btn btn-info" onclick="getdetail(@BlackListsDetail,'@(obj.BlackLists[i].Mobile)')" data-toggle="modal" data-target="#blacklistdetail_modal">檢視</button></td>
                        <td scope="col"></td>
                    </tr>
                }

            }
        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="8" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>


<div id="blacklistdetail_modal" class="modal fade">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <table class="table table-striped bg-white mt-4 " data-limit-navigation="5" id="myTable">
                    <thead class="text-white bg-primary">
                        <tr>
                            <th scope="col">歷程記錄日</th>
                            <th scope="col">手機</th>
                            <th scope="col">黑名單建立日期</th>
                            <th scope="col">目前是否為黑名單</th>
                            <th scope="col">操作人員</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        </tr>
                    </tbody>
                    <tfoot class="hide-if-no-paging">
                        <tr>
                            <td colspan="5" class="text-center">
                                <ul class="pagination"></ul>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>

<div id="blacklistaccount_modal" class="modal fade">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <table class="table table-striped bg-white mt-4 " data-limit-navigation="4" id="myTable2">
                    <thead class="text-white bg-primary">
                        <tr>
                            <th scope="col">身分證字號</th>
                            <th scope="col">姓名</th>
                            <th scope="col">地址</th>
                            <th scope="col">手機</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        </tr>
                    </tbody>
                    <tfoot class="hide-if-no-paging">
                        <tr>
                            <td colspan="4" class="text-center">
                                <ul class="pagination"></ul>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    var errorLine = '@((ViewData["errorLine"]==null)?"": ViewData["errorLine"].ToString())';
    if (errorLine != "" && errorLine != "ok") {
        swal("失敗!", errorLine, "error");
    }
    if (errorLine == "ok") {
        swal("成功!", errorLine, "success");
    }

</script>