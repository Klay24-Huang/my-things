<div class="container mt-4" id="ShowSetCardPanel">

    <table class="table table-striped bg-white sort-table" data-limit-navigation="5" data-toggle="table">
            <thead class="text-white bg-primary">
                <tr>
                    <th data-sort-inital="descending" data-class="expand">交易時間</th>
                    <th>交易項目</th>
                    <th>交易金額</th>
                </tr>
            </thead>
            <tbody>
                @if (historyDataLen == 0)
                {
                    <tr>
                        <td colspan="9" class="text-center">查無結果</td>
                    </tr>

                }
                else
                {
                    for (int i = 0; i < historyDataLen; i++)
                    {


                        //重新定義交易明細
                        switch (historyData[i].TradeType)
                        {
                            case "Pay_Car":
                                tradeType = "付款—租汽車";
                                tradeKey = $"合約編號：{historyData[i].TradeKey}";
                                break;

                            case "Pay_Motor":
                                tradeType = "付款—租機車";
                                tradeKey = $"合約編號：{historyData[i].TradeKey}";
                                break;

                            case "Pay_Monthly":

                                //訂閱制期數計算
                                period = historyData[i].MonProPeriod;

                                tradeType = "訂閱制方案";
                                tradeKey = $"{historyData[i].ProjNM} 第{count}期";
                                count++;
                                if(count > period) { count = 1; }
                                break;

                            case "Store_Credit":
                                tradeType = "儲值";
                                tradeKey = $"信用卡後四碼：{historyData[i].TradeKey}";
                                break;

                            case "Store_Shop":
                                tradeType = "儲值";
                                tradeKey = $"{historyData[i].TradeKey}";
                                break;

                            case "Store_Account":
                                tradeType = "儲值";
                                tradeKey = $"{historyData[i].TradeKey}";
                                break;

                            case "Store_Return":
                                tradeType = "合約退款";
                                tradeKey = $"合約編號：{historyData[i].TradeKey}";
                                break;

                            case "Store_Trans":
                                tradeType = "儲值金轉入";
                                tradeKey = $"轉贈人：{historyData[i].TradeKey}";
                                break;

                            case "Give_Trans":
                                tradeType = "儲值金轉贈";
                                tradeKey = $"受贈人：{historyData[i].TradeKey}";
                                break;

                            case "Withdraw":
                                tradeType = "儲值金提領";
                                tradeKey = "";
                                break;
                        }

                        <tr>
                            <td>@historyData[i].TradeDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>@tradeType<br/>@tradeKey</td>
                            <td>@historyData[i].TradeAMT</td>
                        </tr>

                        }
                    }

            </tbody>
            <tfoot class="hide-if-no-paging">
                <tr>
                    <td colspan="9" class="text-center">
                        <ul class="pagination"></ul>
                    </td>
                </tr>
            </tfoot>
        </table>
</div>

<script>
    var historyDataLen = '@(historyDataLen)'
</script>