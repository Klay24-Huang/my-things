    string EDate = (ViewData["EndDate"] == null) ? "" : ViewData["EndDate"].ToString();
    string UserName = (ViewData["UserName"] == null) ? "" : ViewData["UserName"].ToString();
    string IDNOSuff = (ViewData["IDNOSuff"] == null) ? "" : ViewData["IDNOSuff"].ToString();
    string AuditError = (ViewData["AuditError"] == null) ? "Y" : ViewData["AuditError"].ToString();
    string[] AuditReusltCheck = { "", "", "" };
    string[] AuditTypeCheck = { "", "", "" };
    string MEMRFNBR = (ViewData["MEMRFNBR"] == null) ? "" : ViewData["MEMRFNBR"].ToString();

    if (AuditReuslt != "" && AuditReuslt != "-1")
    {
        AuditReusltCheck[Convert.ToInt32(AuditReuslt)] = " checked";
    }
    if (AuditType != "" && AuditType != "-1")
    {
        AuditTypeCheck[Convert.ToInt32(AuditType)] = " checked";
    }
    string[] AuditModeCheck = { "", "", "" };
    if (AuditMode != "" && AuditMode != "-1")
    {
        if (AuditMode != "0")
        {
            //AuditModeCheck[Convert.ToInt32(AuditMode)] = " checked";
            AuditModeCheck[Convert.ToInt32(AuditMode)] = " selected";
        }
        else
        {
            //AuditModeCheck[2] = " checked";
            AuditModeCheck[2] = " selected";
        }

    }
    int ResultLen = -1;
    List<Domain.TB.BackEnd.BE_GetAuditList> lstData = null;
    if (Model != null)
    {
        lstData = new List<Domain.TB.BackEnd.BE_GetAuditList>();
        lstData = Model.ToList();
        ResultLen = lstData.Count;
    }
}
