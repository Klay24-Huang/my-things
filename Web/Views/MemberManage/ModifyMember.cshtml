<div class="container mt-4">
    <table class="table table-striped bg-white mt-4 " data-limit-navigation="5">
        <thead class="text-white bg-primary">
            <tr>
                <th data-sort-ignore="true">
                </th>
                <th scope="col">申請日期</th>
                <th scope="col">姓名</th>
                <th scope="col">身份證字號</th>
                <th scope="col">姓別</th>
                <th scope="col" style="display:none;">處理區分</th>
                <th scope="col" style="width:150px;display:none;">審核備註</th>
                <th scope="col" style="display:none;">審核結果</th>
                <th scope="col">黑名單</th>
                <th data-sort-ignore="true">修改</th>
            </tr>
        </thead>
        <tbody>
            @if (ResultLen == 0)
            {
                <tr>
                    <td colspan="9" class="text-center">
                        查無結果
                    </td>
                </tr>
            }
            else
            {
                for (int i = 0; i < ResultLen; i++)
                {
                    <tr>
                        <td data-sort="false"></td>
                        <td scope="col">@(Convert.ToDateTime(lstData[i].IsNew == "1" ? lstData[i].ApplyDate : lstData[i].ModifyDate).ToString("yyyy-MM-dd HH:mm:ss"))</td>
                        <td scope="col">@(lstData[i].MEMCNAME)</td>
                        <td scope="col">@(lstData[i].MEMIDNO)</td>
                        <td scope="col">@((lstData[i].SEX == "1") ? "男" : "女")</td>
                        <td scope="col" style="display:none;">
                            @{
                                string AuditStr = "未處理";
                                string AuditResultStr = "";
                            }
                            @if (lstData[i].HasAudit != "0")
                            {
                                AuditStr = "已處理";
                                if (lstData[i].HasAudit == "1")
                                {
                                    AuditResultStr = "未通過";
                                }
                                else
                                {
                                    if (lstData[i].HasAudit == "-1")
                                    {
                                        AuditResultStr = "未申請";
                                        AuditStr = "未處理";
                                    }
                                    else
                                    {
                                        AuditResultStr = "已通過";
                                    }
                                }
                            }
                            @(AuditStr)
                        </td>
                        <td scope="col" style="color:red;display:none;">@(lstData[i].MEMO.ToString().Replace(",", ", "))</td>
                        <td scope="col" style="display:none;">@(AuditResultStr)</td>
                        <td scope="col">@(lstData[i].isBlock=="Y"?"是":"否")</td>
                        <td scope="col"><button name="btnAudit_@(i)" id="btnAudit_@(i)" onclick="GoDetail('@(lstData[i].MEMIDNO)')" class="btn btn-outline-info">修改</button></td>
                    </tr>
                }

            }

        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="8" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<!--輸出表格結束-->
