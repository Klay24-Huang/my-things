@model IEnumerable<Domain.TB.BackEnd.BE_GetCarBindData>
@{
    List<Domain.TB.BackEnd.BE_GetCarBindData> lstData = null;
    string CID = (ViewData["CID"] == null) ? "" : ViewData["CID"].ToString();
    string CarNo = (ViewData["CarNo"] == null) ? "" : ViewData["CarNo"].ToString();
    string Mode = (ViewData["Mode"] == null) ? "" : ViewData["Mode"].ToString();
    int ResultLen = -1;

    if (Model != null)
    {
        lstData = Model.ToList();
        ResultLen = lstData.Count;
    }
}
<!--查詢介面-->
<div class="container mt-4">
    <!--card start-->
    <div class="card">
        <div class="card-header bg-secondary text-white">
            車輛車機綁定設定
        </div>
        @using (Html.BeginForm("CarBind", "CarDataInfo", FormMethod.Post, new { id = "frmCarBind", @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <ul class="list-group list-group-flush">
                <!--每一個li是一項查詢條件-->
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                車機號碼
                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="text" name="CID" id="CID" value="@CID" maxlength="5" />
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                車號
                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="text" name="CarNo" id="CarNo" value="@CarNo" />

                            </div>
                        </div>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-2">
                                使用狀態
                            </div>
                            <div class="col-md-3">

                                <select class="form-control" id="BindStatus" name="BindStatus">
                                    <option value="-1"></option>
                                    <option value="1">已綁定</option>
                                    <option value="0">未綁定</option>
                                </select>

                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-3 offset-md-2">
                                <input type="hidden" name="Mode" id="Mode" value="@(Mode)" />
                                <input type="hidden" id="Account" name="Account" value="@((Session["Account"] == null) ? "" : Session["Account"].ToString())" />
                                <input type="hidden" id="len" name="len" value="@ResultLen" />
                                <button type="button" id="btnSend" name="btnSend" class="btn btn-primary">查詢</button>
                                <button type="button" id="btnExplode" name="btnExplode" class="btn btn-primary">匯出</button>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        }
    </div>
    <!--end card-->
</div>
<!--查詢介面結束-->
<!--輸出表格-->
<div class="container mt-4">
    <table class="table bg-white table-striped bg-white mt-4 " data-limit-navigation="5">
        <thead class="text-white bg-primary">
            <tr>
                <th data-sort-ignore="true"></th>
                <th scope="col" data-type="numeric">ID</th>
                <th scope="col">車機號碼</th>
                <th scope="col">使用狀態</th>
                <th scope="col">車號</th>
                <th scope="col">遠傳Cat平台token</th>
                <th scope="col">iButton</th>
                <th scope="col">門號(SIM卡)</th>
                <th data-sort-ignore="true">編輯</th>

            </tr>
        </thead>
        <tbody>
            @if (ResultLen == 0)
            {
                <tr>
                    <td colspan="9">查無結果</td>
                </tr>
            }
            else
            {
                for (int i = 0; i < ResultLen; i++)
                {
                    string BindStatus = (lstData[i].BindStatus == 1) ? "已綁定" : "未綁定";
                    <tr>

                        <td></td>
                        <td scope="row">@(i+1)</td>
                        <td scope="col">
                            @(lstData[i].CID)
                        </td>
                        <td scope="col">
                            @(BindStatus)
                        </td>
                        <td scope="col"><div id="CarNo_@(i+1)">@(lstData[i].CarNo)</div></td>
                        <th scope="col">@(lstData[i].deviceToken)</th>
                        <td scope="col">
                            @(lstData[i].iButtonKey)
                            <input type="text" name="iButtonKey_@(i+1)" id="iButtonKey_@(i+1)" value="@lstData[i].iButtonKey" class="form-control" style="display:none" />
                        </td>
                        <td scope="col">@(lstData[i].MobileNum)</td>
                        <td scope="col">
                            <Button type="button" id="btnEdit_@(i+1)" name="btnEdit_@(i+1)" class="btn btn-outline-secondary" onclick=DoEdit('@(i+1)');>編輯</Button>
                            <Button type="button" id="btnSave_@(i+1)" name="btnSave_@(i+1)" class="btn btn-outline-secondary" style="display:none" onclick=DoSave('@(i+1)');>儲存</Button>
                            <Button type="button" id="btnReset_@(i+1)" name="btnReset_@(i+1)" class="btn btn-outline-secondary" style="display:none" onclick=DoReset('@(i+1)');>取消</Button>
                        </td>
                    </tr>
                }
            }

        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="9" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<!--輸出表格結束-->

<script>
    var errorLine = '@((ViewData["errorLine"]==null)?"": ViewData["errorLine"].ToString())';
    var errorMsg = '@((ViewData["errorMsg"] == null)?"" : ViewData["errorMsg"].ToString())';
</script>

