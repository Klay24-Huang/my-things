<!--輸出表格-->
<div class="container mt-4" id="panelResult" name="panelResult">
    <table class="table bg-white table-striped bg-white mt-4 "  data-limit-navigation="5">
        <thead class="text-white bg-primary">
            <tr>
                <th data-sort="false"></th>
                <th scope="col">ID</th>
                <th scope="col">員工編號</th>
                <th scope="col">員工姓名</th>
                <th scope="col">密碼</th>
                <th scope="col">使用者群組</th>
                <th data-hide="all" scope="col">營運商</th>
                <th data-hide="all" scope="col"></th>
                <th data-hide="all" scope="col">有效起迄日(起)</th>
                <th data-hide="all" scope="col">有效起迄日(迄)</th>
                <th scope="col">修改</th>
            </tr>
        </thead>

        <tbody>
            @{
                if (ResultLen == 0)
                {
                    <tr>
                        <td colspan="11">查無結果</td>
                    </tr>
                }
                else if (ResultLen > 0)
                {
                    for (int i = 0; i < ResultLen; i++)
                    {
        <tr>
            <td></td>
            <td scope="row">@((i+1).ToString())<input type="hidden" name="PK_@(lstData[i].SEQNO)" id="PK_@(lstData[i].SEQNO)" value="@(lstData[i].SEQNO)" /></td>
            <td scope="col">@lstData[i].Account <input type="text" name="UserAccount_@(lstData[i].SEQNO)" id="UserAccount_@(lstData[i].SEQNO)" value="@(lstData[i].Account)" class="form-control" style="display:none" /></td>
            <td scope="col">@lstData[i].UserName<input type="text" name="UserName_@(lstData[i].SEQNO)" id="UserName_@(lstData[i].SEQNO)" value="@(lstData[i].UserName)" class="form-control" style="display:none" /></td>
            <td scope="col">**********<input type="text" name="UserPWD_@(lstData[i].SEQNO)" id="UserPWD_@(lstData[i].SEQNO)" value="" class="form-control" style="display:none" placeholder="不修改密碼請勿輸入" /></td>
            <td scope="col">@(lstData[i].UserGroupName)<select class="form-control" style="display:none;" name="UserGroupName_@(lstData[i].SEQNO)" id="UserGroupName_@(lstData[i].SEQNO)"></select><input type="hidden" name="UserGroupID_@(lstData[i].SEQNO)" id="UserGroupID_@(lstData[i].SEQNO)" value="@(lstData[i].UserGroupID)" /></td>
            <td scope="col">@lstData[i].OperatorName<select class="form-control" style="display:none;" name="OperatorName_@(lstData[i].SEQNO)" id="OperatorName_@(lstData[i].SEQNO)"></select><input type="hidden" name="OperatorID_@(lstData[i].SEQNO)" id="OperatorID_@(lstData[i].SEQNO)" value="@(lstData[i].Operator)" /></td>
            <td scope="col"><button type="button" class="btn btn-primary" onclick="showPower('@(lstData[i].PowerList)');">檢視權限</button></td>
            <td scope="col">
                @lstData[i].StartDate.ToString("yyyy-MM-dd")

                <div class="custom-datepicker">
                    <input class="datePicker form-control" type="text" id="StartDate_@(lstData[i].SEQNO)" name="StartDate_@(lstData[i].SEQNO)" value="@lstData[i].StartDate.ToString("yyyy-MM-dd HH:mm")" readonly="false" style="display:none">

                </div>

            </td>
            <td scope="col">
                @lstData[i].EndDate.ToString("yyyy-MM-dd")
                <div class="custom-datepicker">
                    <input class="datePicker form-control" type="text" id="EndDate_@(lstData[i].SEQNO)" name="EndDate_@(lstData[i].SEQNO)" value="@lstData[i].EndDate.ToString("yyyy-MM-dd HH:mm")" readonly="false" style="display:none">

                </div>
            </td>
            <td scope="col">
                <Button type="button" id="btnEdit_@(lstData[i].SEQNO)" name="btnEdit_@(lstData[i].SEQNO)" class="btn btn-outline-secondary" onclick="DoEdit('@(lstData[i].SEQNO)');">修改</Button>
                <Button type="button" id="btnSave_@(lstData[i].SEQNO)" name="btnSave_@(lstData[i].SEQNO)" class="btn btn-outline-secondary" style="display:none" onclick="DoSave('@(lstData[i].SEQNO)');">儲存</Button>
                <Button type="button" id="btnReset_@(lstData[i].SEQNO)" name="btnReset_@(lstData[i].SEQNO)" class="btn btn-outline-secondary" style="display:none" onclick="DoReset('@(lstData[i].SEQNO)');">取消</Button>
            </td>
        </tr>
                    }
                }
                else
                {

                }
            }
        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="11" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<div class="modal fade " id="surrounding_modal" tabindex="-1" role="dialog" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                @if (hasPower)
                {
                    @Html.Action("GetPowerList", "CommonObj")
                }
                else
                {
                    @Html.Action("GetDisablePowerList", "CommonObj")
                }
            </div>
            <div class="modal-footer">
                @if (hasPower)
                {
                    <Button type="button" id="btnSet" name="btnSet" class="btn btn-primary">全選</Button>
                }

                <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
</div>
<!--查詢介面結束-->
