@model IEnumerable<Domain.TB.BackEnd.BE_GetUserData>
@{

    List<Domain.TB.BackEnd.BE_GetUserData> lstData = null;
    string FuncGroupID = (ViewData["FuncGroupID"] == null) ? "" : ViewData["FuncGroupID"].ToString();
    string FuncGroupName = (ViewData["FuncGroupName"] == null) ? "" : ViewData["FuncGroupName"].ToString();
    string SDate = (ViewData["StartDate"] == null) ? "" : ViewData["StartDate"].ToString();
    string EDate = (ViewData["EndDate"] == null) ? "" : ViewData["EndDate"].ToString();
    string Mode = (ViewData["Mode"] == null) ? "" : ViewData["Mode"].ToString();
    string UserName = (ViewData["UserName"] == null) ? "" : ViewData["UserName"].ToString();
    string UserPWD = (ViewData["UserPWD"] == null) ? "" : ViewData["UserPWD"].ToString();
    string UserAccount = (ViewData["UserAccount"] == null) ? "" : ViewData["UserAccount"].ToString();
    int SEQNO = ((ViewData["UserGroup"] == null) ? 0 : Convert.ToInt32(ViewData["UserGroup"].ToString()));
    int OperatorID = ((ViewData["OperatorID"] == null) ? 0 : Convert.ToInt32(ViewData["OperatorID"].ToString()));
    bool hasPower = false;

    int ResultLen = -1;
    if (Mode == "Edit")
    {
        if (Model != null)
        {
            lstData = Model.ToList();
            ResultLen = lstData.Count;
        }
    }
}
