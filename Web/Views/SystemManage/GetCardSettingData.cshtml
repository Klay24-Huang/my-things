@model IEnumerable<Domain.TB.BackEnd.BE_CardSettingData>
@{
    Layout = null;
    int CardSettingLen = 0;
    List<Domain.TB.BackEnd.BE_CardSettingData> lstCardSettingLogs = null;
    if (Model != null)
    {
        lstCardSettingLogs = new List<Domain.TB.BackEnd.BE_CardSettingData>();
        lstCardSettingLogs = Model.ToList();
        CardSettingLen = lstCardSettingLogs.Count;
    }
}
<div class="container mt-4" id="ShowSetCardPanel">
    <table class="table bg-white " data-limit-navigation="5">
        <thead class="text-white bg-primary">
            <tr>
                <th data-sort="false"></th>
                <th scope="col">序號</th>
                <th scope="col">日期</th>
                <th scope="col">發送狀態</th>
                <th scope="col">車號</th>
                <th scope="col">卡號</th>
            </tr>
        </thead>
        <tbody>
            @if (CardSettingLen == 0)
            {
                <tr><td colspan="6" class="text-center">查無結果</td></tr>
            }
            else
            {
                for (int i = 0; i < CardSettingLen; i++)
                {
                    <tr>
                        <td></td>
                        <td scope="row">@(i+1)</td>
                        <td scope="col">@(lstCardSettingLogs[i].MKTime.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                        <td scope="col">@((lstCardSettingLogs[i].IsSuccess==1)?"成功":"失敗")</td>
                        <td scope="col">@(lstCardSettingLogs[i].CarNo)</td>
                        <td scope="col">
                            @if (lstCardSettingLogs[i].Mode == 0)
                            {
                                if (lstCardSettingLogs[i].CardType == 0)
                                {
                                    @("清空一般卡")
                                }
                                else
                                {
                                    @("清空萬用卡")
                                }
                            }
                            else
                            {
                                if (lstCardSettingLogs[i].CardType == 0)
                                {
                                    @(lstCardSettingLogs[i].CardNo+"(一般卡)")
                                }
                                else
                                {
                                    @(lstCardSettingLogs[i].CardNo+"(萬用卡)")
                                }
                            }
                        </td>
                
                    </tr>
                }
            }

        </tbody>
        <tfoot class="hide-if-no-paging">
            <tr>
                <td colspan="6" class="text-center">
                    <ul class="pagination"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<input type="hidden" name="CardSettingLen" id="CardSettingLen" value="@CardSettingLen" />
