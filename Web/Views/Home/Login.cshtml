                                            </svg>
                                        </div>
                                        <div class="col-md-10">
                                            <input class="form-control" type="password" id="UserPwd" name="UserPwd" placeholder="密碼" required title="請輸入密碼">
                                        </div>
                                    </div>
                                </div>
                                <div class="container-fluid my-4">
                                    <div class="row no-gutters">
                                        <div class="col-12">
                                            <button type="submit" id="btnLogin" class="btn btn-danger btn-block logon_btn">登入</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!---->
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="IsSuccess" name="IsSuccess" value="@((ViewData["IsLogin"] != null)?ViewData["IsLogin"].ToString() :"-1")" />
        <input type="hidden" id="LoginMessage" name="LoginMessage" value="@((ViewData["LoginMessage"] != null)?ViewData["LoginMessage"].ToString() :"")" />
        <input type="hidden" id="UserID" name="UserID" value="@((ViewData["Account"] == null)?"": ViewData["Account"].ToString())" />
        <input type="hidden" id="UserGroup" name="UserGroup" value="@((ViewData["UserGroup"] == null)?"": ViewData["UserGroup"].ToString())" />
    </main>

    <!-- import js -->
    <script>
           var jsHost = "@hostPath";
    </script>
    <script src="~/Scripts/js/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/js/popper.js"></script>
    <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/js/jquery-filestyle.js"></script>
    <script src="~/Scripts/js/flatpickr.js"></script>
    <script src="~/Scripts/js/CommonFunc.js"></script>
    <script src="~/Scripts/plugin/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/plugin/busy-load-master/app.js"></script>

    <script src="~/Scripts/js/ActionJS/Login.js">

    </script>
</body>
</html>