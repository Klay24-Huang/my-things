@{ 
    Layout = null;
    string hostPath = System.Configuration.ConfigurationManager.AppSettings["jsHost"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>iRent無人化租車共享系統 後台登入</title>
    <!-- import css -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/css/flatpickr.min.css">
    <link rel="stylesheet" href="~/Content/css/jquery-filestyle.min.css">
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Scripts/plugin/busy-load-master/app.css" />
    <link rel="stylesheet" href="~/Content/css/sweetalert2.css">
</head>
<body>
    <!-- main -->
